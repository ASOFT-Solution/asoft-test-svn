@model MyConnection.HoiVien

@{
    ViewBag.Title = "Index";
}

@(Html.Kendo().Window()
    .Name("window")
    .Title("Danh mục hội viên")
    .Content(@<text>
        @Html.Partial("PartialCreate")
    </text>)
    .Draggable()
    .Resizable()
    .Visible(false)
    .Width(700)
    .Actions(a=>a.Clear())
)
<h2>Danh mục hội viên</h2>
    <table>
        <tr>
            <td>
                @Html.Raw("Đơn vị")
                @Html.Editor("donvi")
            </td>
            <td>
                @Html.Raw("Địa chỉ")
                @Html.Editor("diachi")
            </td>
            <td>
                @Html.Raw("Số điện thoại")
                @Html.Editor("sodienthoai")
            </td>
        </tr>
        <tr>
            <td>
                @Html.Raw("Mã hội viên")
                @Html.Editor("mahoivien")
            </td>
            <td>
                @Html.Raw("Mã số thuế/CMND")
                @Html.Editor("cmnd")
            </td>
            <td>
                @Html.Raw("Fax")
                @Html.Editor("fax")
            </td>
        </tr>
        <tr>
            <td>
                @Html.Raw("Tên hội viên")
                @Html.Editor("tenhoivien")
            </td>
            <td>
                @Html.Raw("Điện thoại di động")
                @Html.Editor("dtdd")
            </td>
            <td>
                @Html.Raw("Email")
                @Html.Editor("email")
            </td>
        </tr>
        <tr>
            <td>
            
            </td>
            <td>
                &nbsp
            </td>
            <td>
                <input id="submit" type="button" value="Lọc dữ liệu" />
                <input id="lamlai" type="button" value="Làm lại" />
            </td>
        </tr>
    </table>

    <p>
        <button id="them">Thêm</button>
        <button id="xoa">Xóa</button>
        <button id="disable">Disable</button>
        <button id="enable">Enable</button>
    </p>

