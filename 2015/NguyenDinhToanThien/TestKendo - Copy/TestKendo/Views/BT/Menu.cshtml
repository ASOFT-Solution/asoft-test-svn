@model List<MyConnection.MenuDaCap>

@helper ListArrayItems(int m_id) {
 foreach(var i in Model)
 {
     if (m_id == i.MaParent)
    {
    <li>
        @Html.Raw("<a href='bt/menu'>" + i.Ten + "</a>")
        <ul>
           @ListArrayItems(i.MaMenu)
        </ul>
    </li> 
    }
 }
} 

