@model MyConnection.HoiVien
<div id="themxoasua">
@(Html.Kendo().Button()
    .Name("them")
    .HtmlAttributes(new { type = "button",title = "Add new", @class="m-button"})
    .ImageUrl(Url.Content("~/images/icon/plus.ico"))
    .Content(""))
@(Html.Kendo().Button()
    .Name("xoa")
    .HtmlAttributes( new {type = "button",title = "Delete", @class="m-button"} )
    .ImageUrl(Url.Content("~/images/icon/delete.ico"))
    .Content(""))
@(Html.Kendo().Button()
    .Name("disable")
    .HtmlAttributes( new {type = "button",title = "Disable", @class="m-button"} )
    .ImageUrl(Url.Content("~/images/icon/checkdisable.bmp"))
    .Content(""))
@(Html.Kendo().Button()
    .Name("enable")
    .HtmlAttributes( new {type = "button",title = "Enable", @class="m-button"} )
    .ImageUrl(Url.Content("~/images/icon/checkenable.ico"))
    .Content(""))
</div>
@(Html.Kendo().Tooltip()
        .For("#themxoasua")
        .Filter("button")
        .Animation(false)
        .Position(TooltipPosition.Center)
        .Width(100))

<div id="clientsDb">
    @(Html.Kendo().Grid<MyConnection.HoiVien>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Template(c => c.APK).ClientTemplate("<input type='checkbox' name='clickone' value='#= APK #'/>").Title("<input type='checkbox' id='clickall'/>").Width(30);
            columns.Template(c => { }).ClientTemplate("<div name='stt'> </div>").Title("STT").Width(40);
            columns.Bound(c => c.DivisionID).Width(60);
            columns.Bound(c => c.MemberID).Width(110);
            columns.Bound(c => c.MemberName).Width(120);
            columns.Bound(c => c.Address).Width(100);
            columns.Bound(c => c.Identify).Width(150);
            columns.Bound(c => c.Phone).Width(140);
            columns.Bound(c => c.Tel).Width(110);
            columns.Bound(c => c.Fax).Width(110);
            columns.Bound(c => c.Email).Width(110);
            columns.Bound(c => c.Disable).Width(150);
        })
        .Events(e=>e.DataBound("CreateSTT"))
        .HtmlAttributes(new { style = "height: 380px;width:1000px" })
        .Scrollable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Customers_Read", "bt"))
        )
    )
</div>