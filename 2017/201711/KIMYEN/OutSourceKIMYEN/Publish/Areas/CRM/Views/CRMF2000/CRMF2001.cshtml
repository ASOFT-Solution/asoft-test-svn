@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.CRM
@using ASOFT.ERP.ViewModel.Helper;
@model CRMF2001ViewModel


@using (Html.BeginForm(null, null, FormMethod.Post, new
    {
        id = "CRMF2001"
    }))
    {
        <div class="incomingcall" hidden>
            <div class="incomingcall-bar">
                @LocalizedHelper.GetLocalizedResourceString("CRMF2001.CRMF2001Title", "CRMF2001","CRM")
                <div class="close_box1"><img src="~/Areas/CRM/Content/images/close.png"/></div>
            </div>
            <div>
                <fieldset class ="fieldset-incoming">
                    <legend></legend>
                    <table class="tb-incomingcall">
                        <tr>
                            <td>@LocalizedHelper.GetLocalizedResourceString("CRMF2001.Tel", "CRMF2001","CRM")</td>
                            <td>:</td>
                            <td colspan="2"><div>@Html.DisplayFor(model => model.Tel)</div></td>
                        </tr>       
                        <tr>
                            <td>@LocalizedHelper.GetLocalizedResourceString("CRMF2001.ContactName", "CRMF2001","CRM")</td>
                            <td>:</td>
                            <td colspan="2" ><div>@Html.DisplayFor(model => model.ContactName)</div></td>
                        </tr>       
                        <tr>
                            <td>@LocalizedHelper.GetLocalizedResourceString("CRMF2001.AccountName", "CRMF2001","CRM")</td>
                            <td>:</td>
                            <td colspan="2" ><div>@Html.DisplayFor(model => model.AccountName)</div></td>
                        </tr>  
                        <tr>
                            <td>@LocalizedHelper.GetLocalizedResourceString("CRMF2001.Address", "CRMF2001","CRM")</td>
                            <td>:</td>
                            <td colspan="2"><div>@Html.DisplayFor(model => model.Address)</div></td>
                        </tr>   
                        <tr>
                            <td>@LocalizedHelper.GetLocalizedResourceString("CRMF2001.Notes", "CRMF2001","CRM")</td>
                            <td>:</td>
                            <td colspan="2" ><div>@Html.DisplayFor(model => model.Notes)</div></td>
                        </tr> 
                    </table>
                    <div class="bt-incomingcall">
                        @(Html.ASOFTButton()
                                    .HtmlAttributes(new { @class = "bt" })
                                    .Name("BtnAnswer"))

                                   @* @(Html.ASOFTButton("")
                                    .HtmlAttributes(new { @class = "bt" })
                                    .Name("BtnHangUpIC"))*@
                    </div>
                </fieldset>
            </div>
        </div>
}