@using ASOFT.ERP.A00.Core;
@using ASOFT.ERP.A00.Core.Control;
@using ASOFT.ERP.A00.Entities.Infrastructure;
@using ASOFT.ERP.A00.Entities.Database;
@using ASOFT.ERP.A00.Entities.Common;
@using ASOFT.ERP.ViewModel;
@model ASOFT.ERP.ViewModel.A00.PeriodFilterViewModel
@{
    string css = string.Empty;
    if (Model.NumberOfColumns == 2)
    {
        css = "grid_6 alpha line_right";
    }
    else if(Model.NumberOfColumns == 3)
    {
        css = "grid_4 alpha line_right";
    }
}


        <tr>
            <td class="container_period_label">@Html.ASOFTRadioButton(model => model.IsDate, 0, htmlAttributes: new
                                          {
                                              id = "rdbIsDate0"
                                          }) @Html.ASOFTLabel(model => model.FromDateFilter)</td>
            <td class="container_period_control">
                @(Html.ASOFTDateEdit(model => model.FromDateFilter))
            </td>

            <td class="container_period_space"></td>
            <td class="container_period_label">@Html.ASOFTLabel(model => model.ToDateFilter)</td>
            <td class="container_period_control">
                @(Html.ASOFTDateEdit(model => model.ToDateFilter))
            </td>
        </tr>
        <tr>
            <td>@Html.ASOFTRadioButton(model => model.IsDate, 1, htmlAttributes: new
           {
               id = "rdbIsDate1"
           }) @Html.ASOFTLabel(model => model.FromPeriodFilter)</td>
            <td>
                @(Html.ASOFTBussinessComboBox()
                                  .ASOFTPeriod(model => model.FromPeriodFilter)
                                  .Events(e => e.Cascade("fromPeriod_Cascade"))
                                  .Enable(false))
            </td>
            <td class="container_period_space"></td>
            <td>@Html.ASOFTLabel(model => model.ToPeriodFilter)</td>
            <td>
                @(Html.ASOFTBussinessComboBox()
                .ASOFTPeriod(model => model.ToPeriodFilter, checkBoxID: "IsDate")
                            .Events(e => e.Cascade("toPeriod_Cascade"))
                            .Enable(false))

            </td>
        </tr>

