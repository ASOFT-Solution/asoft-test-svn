@using ASOFT.ERP.A00.Core;


@model ASOFT.ERP.ViewModel.POS.POSF0065ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = @Html.ASOFTPageTitle(m => m.Title, "POSF0065").ToString();
    ViewBag.Width = 900;
}

<div class="asf-form-container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new
    {
        id = "FormFilter"
    }))
    {
        <span class="asf-disabled-visibility">
            @(Html.ASOFTTextBox(model => model.APK))
        </span>
    
        <div class="asf-form-container container_12 pagging_bottom ">
            <div class="grid_6 alpha float_left">
                <table class="asf-table-view">
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.OriginInventory)</td>
                        <td>
                            @(Html.ASOFTTextBox(model => model.OriginInventory, htmlStyle: new
                               {
                                   width = Unit.Percentage(100)
                               })                           
                            .ReadOnlyIf(true))

                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid_0"></div>
            <div class="grid_6 omega float_right line_left_with_grid">

                @Html.ASOFTTextBox(model => model.SearchInventory, htmlStyle: new
                           {
                               width = Unit.Percentage(100)
                           })

            </div>
        </div>
        <div class="asf-li-container">
            <ul class="right-align">
                <li>
                    @(Html.ASOFTSearchButton(htmlAttributes: new Dictionary<string, object>
                    {
                        {"data-event-handler", "btnSearch_Click"}
                    }).Name("btnSearch"))
                </li>
            </ul>
        </div>
        <div class="clearfix"></div>
        @Html.Partial("GridInventorySearch")
        <div class="container_12 asf-form-button">
            <ul>
                <li>
                    @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnCancel"),
                        htmlAttributes: new Dictionary<string, object>
                        {
                            {"data-event-handler", "btnCancel_Click"}
                        })
                    .Name("btnCancel"))

                </li>
                <li>@(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnChoose"),
                        htmlAttributes: new Dictionary<string, object>
                        {
                            {"data-event-handler", "btnChoose_Click"}
                        })
                      .Name("btnChoose"))</li>
                
            </ul>
        </div> 
    }
</div>

@section styleFeature{
    <link href="@Url.Content("~/Areas/POS/Content/POSF0065.css")" rel="stylesheet" type="text/css" />
}

@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0065.js")" type="text/javascript"></script>
    @Html.Kendo().DeferredScripts()
}
