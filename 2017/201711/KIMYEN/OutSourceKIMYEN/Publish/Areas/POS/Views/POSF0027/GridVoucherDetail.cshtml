@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@using ASOFT.ERP.A00.Entities.Database

@model ASOFT.ERP.ViewModel.POS.POSF00281ViewModel
@{
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "POSF0028Grid",
        Scrollable = true,
        ControllerName = "POSF0027",
        ActionName = "GetGridDetailData",
        NameEventPost = "sendDataFilterEdit",
        IsShowCheck = false,
        IsAutoHeight = false,
        HtmlAttribute = new
        {
            style = "height:370px;",
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "RowNum",
                TitleColumn = ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 30,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                ClientTemplate = "#= renderNumber1(data) #",
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryID",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryID),
                Width = 120,
                EditColumn = !Model.isPOST0016,
                VisibleColumn = true,
                EditorTemplateName = "POSInventory"
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryName",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryName),
                Width = 190,
                VisibleColumn = true,
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "UnitID",
                TitleColumn = Html.ASOFTRaw(model => model.UnitID),
                Width = 75,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "ShipQuantity",
                TitleColumn = Html.ASOFTRaw(model => model.ShipQuantity),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                EditColumn = true,
                VisibleColumn = true,
                FormatType = EnumFormatType.QuantityDecimals
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "SalePrice",
                TitleColumn = Html.ASOFTRaw(model => model.SalePrice),
                Width = 75,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true,
                EditColumn = !Model.isPOST0016,
                FormatType = EnumFormatType.ConvertedDecimals
            },
              new ASOFTGridColumnSetting
            {
                IDColumn = "StatusInventory",
                ClientTemplate = @"#= data.StatusInventoryName || '' #",
                TitleColumn = Html.ASOFTRaw(model => model.StatusInventory),
                HtmlAttrCoulmns = (new {@class = "asf-cols-align-left"}),
                Width = 80,
                VisibleColumn = true,
                EditColumn = Model.FormStatus == ASOFTFormActionType.AddNew,
                EditorTemplateName ="POSIsDisplay",
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "SerialNo",
                TitleColumn = Html.ASOFTRaw(model => model.SerialNo),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                EditColumn = true,
                VisibleColumn =  ASOFTEnvironment.CustomerIndex == ASOFTConstants.CUSTOMERINDEX_OKIA
            },
               new ASOFTGridColumnSetting
            {
                IDColumn = "WarrantyCard",
                TitleColumn = Html.ASOFTRaw(model => model.WarrantyCard),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                EditColumn = true,
                VisibleColumn =  ASOFTEnvironment.CustomerIndex == ASOFTConstants.CUSTOMERINDEX_OKIA
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "Description",
                TitleColumn = Html.ASOFTRaw(model => model.DescriptionD),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                EditColumn = true,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "APK",
                Width = 36,
                ClientTemplate = @"#=genDeleteBtn(data)#",
                VisibleColumn = Model.FormStatus == ASOFTFormActionType.AddNew,
                HtmlAttrCoulmns = (new {style = "text-align:center"})
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryTypeID",
                TitleColumn = Html.ASOFTRaw(model => model.DescriptionD),
                Width = 110,
                VisibleColumn = false
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "UnitName",
                TitleColumn = Html.ASOFTRaw(model => model.DescriptionD),
                Width = 110,
                VisibleColumn = false
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "APKMaster",
                TitleColumn = Html.ASOFTRaw(model => model.DescriptionD),
                Width = 110,
                VisibleColumn = false
            }
        }
    };

}
@(Html.ASOFTCreateGridEdit<ASOFT.ERP.POS.Entities.POSF00282>(gridsetting).Events(m => m.Save("Grid_Save")))

<script type="text/javascript">
    $(document).ready(function () {
        if ($("#APK").val() != null
                && $("#APK").val() != ''
                && $("#APK").val() != EMPTY_GUID) {
            $("#POSF0028Grid").attr("AddNewRowDisabled", "false");
        }
    })
</script>