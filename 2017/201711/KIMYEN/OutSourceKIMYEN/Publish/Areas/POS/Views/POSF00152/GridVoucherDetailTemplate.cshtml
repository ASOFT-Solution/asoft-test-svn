@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@model POSF00152DetailViewModel

@(Html.Kendo().Grid<POSF00152DetailViewModel>()
    .Name("POSF0152DetailGrid")
    .Navigatable(e=>e.Enabled(true))
    .HtmlAttributes( 
            new Dictionary<string, object>
            {
                    { "class", "asf-grid" }, 
                    { "style", "height:220px;" }
            })
    .Columns(columns =>
    {
        columns.Bound("").ClientTemplate("<input type='checkbox' class='asoftcheckbox' />")
                         .Width(30)
                         .Title("<input type='checkbox' id='chkDetailAll' onclick='ASOFT.asoftGrid.checkAll(this)' class='asoftcheckbox'/>");
        columns.Bound("RowNum")
            .Width(30)
            .ClientTemplate("#= renderNumber(data) #")
            .Title(ASOFTLanguage.FindWordA00("A00.Number"));
        columns.Bound("VoucherNo").Width(140);
        columns.Bound("InventoryID").Width(120);
        columns.Bound("InventoryName").Width(160);
        columns.Bound("UnitID").Width(120);
        columns.Bound("Remain").Width(120).HtmlAttributes(new { @class = "asf-cols-align-right" });
        columns.Bound("Description").Width(120);
    })
    .AutoBind(true)
    .Selectable(m=>m.Type(GridSelectionType.Row))
    .Scrollable()
    .Events(e=>e.DataBound("detailGrid_dataBound"))
    .DataSource(dataSource => dataSource
        .Ajax()
        .AutoSync(false)
        .ServerOperation(false)
        .Model(model => model.Id(p => p.APK))
    )
)