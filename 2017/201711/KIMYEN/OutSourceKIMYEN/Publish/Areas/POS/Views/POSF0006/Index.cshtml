@using ASOFT.ERP.A00.Core;


@model ASOFT.ERP.ViewModel.POS.POSF0006ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "POSF0006").ToHtmlString();
    ViewBag.Width = 1000;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "POSF0006"
}))
{
    <span class="asf-disabled-visibility">

    </span>
    <div class="asf-form-container container_12 pagging_bottom ">
        @Html.Partial("GridPaymentDetail", new ASOFT.ERP.ViewModel.POS.POSF0006ViewModel())
    </div>

    <div class="clearfix"></div>
    <div class="asf-form-button">
        <table class="asf-table-view">
            <tr>
                <td>@*align="right"*@
                    <div class="asf-popup-button-container">


                        <div>
                            @(Html
                            .ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                            .Name("btnClose"))
                        </div>
                        <div>
                            @(Html
                            .ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveSetting"))
                            .Name("btnSave"))

                        </div>

                    </div>
                </td>
            </tr>
        </table>
    </div>


    @Html.ASOFTHidden(model => model.LastModifyDateValue)
}

@section jsFeature {
    <script 
        src="@Url.Content("~/Areas/POS/Scripts/POSF0006.js")" 
        type="text/javascript"></script>
}