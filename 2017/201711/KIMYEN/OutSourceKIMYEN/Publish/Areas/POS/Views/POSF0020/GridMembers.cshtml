@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@using ASOFT.ERP.POS.Entities
@using ASOFT.ERP.A00.Entities
@using ASOFT.ERP.ViewModel.Helper;


@model POSF00202ViewModel

@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "GridMembers",
        Scrollable = true,
        ControllerName = "POSF0020",
        ActionName = "GridDataSearch",
        NameEventPost = "sendDataSearch",
        IsShowCheck = false,
        HtmlAttribute = new
        {
            style = "height:100px;",
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "Check",
                TitleColumn = "",
                Width = 20,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                 ClientTemplate  = "<input type='radio' name='radio-check' data-member-name='#=MemberName#' data-member-id='#=MemberID#' value='#=MemberID#' />",
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "MemberID",
                TitleColumn =  ASOFTEnvironment.CustomerIndex != ASOFTConstants.CUSTOMERINDEX_OKIA ? Html.ASOFTRaw(model => model.MemberID) : LocalizedHelper.GetLocalizedResourceString("POSF00202.MemberIDOKIA", "POSF00202"),
                Width = 140,
                VisibleColumn = true,
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "MemberName",
                TitleColumn = ASOFTEnvironment.CustomerIndex != ASOFTConstants.CUSTOMERINDEX_OKIA ? Html.ASOFTRaw(model => model.MemberName) : LocalizedHelper.GetLocalizedResourceString("POSF00202.MemberNameOKIA", "POSF00202"),
                Width = 140,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:right"})
            }
        }
    };
}

@(Html.ASOFTCreateGrid<POSP00202>(gridsetting))
