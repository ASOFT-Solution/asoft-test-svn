@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.ViewModel.Helper

@model ASOFT.ERP.ViewModel.POS.POSF0023ViewModel

@{
    ViewBag.Title = @Html.ASOFTRaw(m => m.Title);
}

<div id="contentMaster">
    <div class="asf-panel-filter container_12">
        @Html.ASOFTHeader(new HeaderModel { Title = Html.ASOFTRaw(model => model.Title), Breakcrumb = true })
    </div>
    <div class="clearfix"></div>
    <div class="asf-panel-filter container_12">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormFilter" }))
        {
            <div class="grid_4 alpha line_right">
                <table class="asf-table-view">
                    <tr>
                        <td class="container_period_label">@Html.ASOFTRadioButton(model => model.IsDate, 0, new { id = "rdoDate" }) @Html.ASOFTLabel(model => model.FromDateFilter)</td>
                        <td class="container_period_control">
                            @(Html.ASOFTDateEdit(model => model.FromDateFilter)
                                  .Value(ASOFTEnvironment.WorkingDate)
                //.Enable(false)
                                  )
                        </td>

                        <td class="container_period_space"></td>
                        <td class="container_period_label">@Html.ASOFTLabel(model => model.ToDateFilter)</td>
                        <td class="container_period_control">
                            @(Html.ASOFTDateEdit(model => model.ToDateFilter)
                                  .Value(ASOFTEnvironment.WorkingDate)
                //.Enable(false)
                                  )
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTRadioButton(model => model.IsDate, 1, new { id = "rdoDate" }) @Html.ASOFTLabel(model => model.FromPeriodFilter)</td>
                        <td>
                            @(Html.ASOFTBussinessComboBox()
                                  .ASOFTPeriod(model => model.FromPeriodFilter)
                                  .Value(ASOFTEnvironment.Period)
                                  .Enable(false))
                        </td>
                        <td class="container_period_space"></td>
                        <td>@Html.ASOFTLabel(model => model.ToPeriodFilter)</td>
                        <td>@(Html.ASOFTBussinessComboBox()
                            .ASOFTPeriod(model => model.ToPeriodFilter)
                            .Value(ASOFTEnvironment.Period)
                            .Enable(false))</td>
                    </tr>

                </table>
            </div>
            <div class="grid_4_1 line_right">
                <table class="asf-table-view">
                    <tr>
                        <td class="container_label">@Html.ASOFTLabel(model => model.DivisionIDFilter)</td>
                        <td class="container_control">
                            @(Html.ASOFTBussinessComboBox().ASOFTDivisionIDList(model => model.DivisionIDFilter))
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.VoucherNoFilter)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.VoucherNoFilter, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid_4 omega float_right">
                <table class="asf-table-view">
                    <tr>
                        <td class="container_label">@Html.ASOFTLabel(model => model.PreparedByFilter)</td>
                        <td class="container_control">
                            @Html.ASOFTTextBox(model => model.PreparedByFilter, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.DescriptionFilter)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.DescriptionFilter, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                </table>
            </div>
        }
    </div>
    <div class="clearfix"></div>
    <div class="container_12 asf-button-filter-container">
        <div class="grid_6 alpha float_left">
            @if (Model.Toolbar1 != null)
            {
                Model.Toolbar1.EventAdd = "voucherDetail_Click";
            }
            @Html.Partial("~/Views/Shared/EditorTemplates/Toolbar.cshtml", Model.Toolbar1 ?? new ASOFTToolBarViewModel())
        </div>
        <div class="grid_6 omega float_right">
            <ul class="vertical float_right">
                <li>
                    @(Html.ASOFTSearchButton()
                          .Name("POSF0023BtnFilter"))

                </li>
                <li>
                    @(Html.ASOFTSearchResetButton()
                          .Name("POSF0023BtnClearFilter"))
                </li>
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>
    @Html.Partial("GridVoucher")
</div>

@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0023.js")" type="text/javascript"></script>
 
}

