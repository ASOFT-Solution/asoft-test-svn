@using ASOFT.ERP.A00.Core
@model ASOFT.ERP.ViewModel.POS.POSF0026ViewModel

@{
    ViewBag.Title = @Html.ASOFTRaw(m => m.Title);
}

<div id="contentMaster">
    <div class="asf-panel-filter container_12">
        @Html.ASOFTHeader(new HeaderModel { Title = Html.ASOFTRaw(model => model.Title), Breakcrumb = true })
    </div>
    <div class="clearfix"></div>
    <div class="asf-panel-filter container_12">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormFilter" }))
        {
            <div class="grid_4 alpha line_right">
                <table class="asf-table-view">
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.DivisionID)</td>
                        <td>
                            @Html.ASOFTCombobox(model => model.DivisionID, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.MemberCardID)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.MemberCardID, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.MemberCardType)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.MemberCardType, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid_4_1 line_right">
                <table class="asf-table-view">

                    <tr>
                        <td>@Html.ASOFTLabel(model => model.ReleaseDate)</td>
                        <td>
                            @Html.ASOFTDateEdit(model => model.ReleaseDate, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.ExpiryDate)</td>
                        <td>
                            @Html.ASOFTDateEdit(model => model.ExpiryDate, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid_4 omega float_right">
                <table class="asf-table-view">
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.Active)</td>
                        <td>
                            @(Html.ASOFTCombobox(model => model.ActiveFilter, htmlStyle: new { width = Unit.Percentage(100) })
                            .BindTo(new List<string> { "Hoạt động", "Ngưng" }).SelectedIndex(1)
                            .SelectedIndex(1))
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.LockedFilter)</td>
                        <td>
                            @(Html.ASOFTCombobox(model => model.Locked, htmlStyle: new { width = Unit.Percentage(100) })
                            .BindTo(new List<string> { "Không", "Đã khóa" }).SelectedIndex(1)
                            .SelectedIndex(1))
                        </td>
                    </tr>
                </table>
            </div>
            
        }
    </div>
    <div class="clearfix"></div>
    <div class="container_12 asf-button-filter-container">
        <div class="grid_6 alpha float_left">
            @if (Model.Toolbar1 != null)
            {
                Model.Toolbar1.EventAdd = "ShowEditorFrame";
                Model.Toolbar1.EventDelete = "ShowEditorFrame";
            }
            @Html.Partial("~/Views/Shared/EditorTemplates/Toolbar.cshtml", Model.Toolbar1 ?? new ASOFTToolBarViewModel())
        </div>
        <div class="grid_6 omega float_right">
            <ul class="vertical float_right">
                <li>
                    @(Html.ASOFTSearchButton()
                          .Name("POSF0011BtnFilter"))


                </li>
                <li>
                    @(Html.ASOFTSearchResetButton()
                          .Name("POSF0011BtnClearFilter"))
                </li>
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>
    @Html.Partial("GridMemberCardList")
</div>

@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0026.js")" type="text/javascript"></script>
}