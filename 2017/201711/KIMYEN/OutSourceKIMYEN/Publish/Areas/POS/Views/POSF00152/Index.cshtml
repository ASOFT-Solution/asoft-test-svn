@model ASOFT.ERP.ViewModel.POS.POSF00152ViewModel


@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = @Html.ASOFTPageTitle(m => m.Title, "POSF00152").ToHtmlString();
    ViewBag.Width = 940;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormInherit" }))
{
    <div class="asf-form-container container_12 pagging_bottom asf-form-popup ">
      @Html.Partial("Filter", Model.Filter)
    </div>
    <div class="asf-form-container container_12">
        @Html.Partial("GridVoucherTemplate", Model.Master)
    </div>
    <span class="clearfix"></span>
    <div class="padding_default"></div>
    <div class="asf-form-container container_12">
        @Html.Partial("GridVoucherDetailTemplate", Model.Detail)
    </div>
    <div class="container_12 asf-form-button">
        <ul class="empty">
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnChoose"))
                      .Name("btnChoose")
                      .Enable(Model.AllowAdd())
                      .Events(e => e.Click("btnChoose_Click")))
            </li>
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                      .Name("BtnCloseChoose")
                      .Events(e => e.Click("btnClose_Click")))

            </li>
        </ul>
    </div>
}
@section styleFeature{
    <link href="@Url.Content("~/Areas/POS/Content/POSF00152.css")" rel="stylesheet" type="text/css" />
}
@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF00152.js")" type="text/javascript"></script>
}