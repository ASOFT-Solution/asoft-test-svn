@using ASOFT.ERP.POS.Entities
@using ASOFT.ERP.A00.Entities
@using ASOFT.ERP.ViewModel.Helper;

@model POSF00761ViewModel

@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "GridMember",
        Scrollable = true,
        ControllerName = "POSF0076",
        ActionName = "GridDataSearch",
        NameEventPost = "sendDataSearch",
        IsShowCheck = true,
        IsAutoHeight = false,
        HtmlAttribute = new
        {
            style = "height:500px;",
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "MemberID",
                TitleColumn =  ASOFTEnvironment.CustomerIndex != ASOFTConstants.CUSTOMERINDEX_OKIA ? Html.ASOFTRaw(model => model.MemberID) : LocalizedHelper.GetLocalizedResourceString("POSF00761.MemberIDOKIA", "POSF00761"),
                Width = 140,
                VisibleColumn = true,
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "MemberName",
                TitleColumn =  ASOFTEnvironment.CustomerIndex != ASOFTConstants.CUSTOMERINDEX_OKIA ? Html.ASOFTRaw(model => model.MemberName) : LocalizedHelper.GetLocalizedResourceString("POSF00761.MemberNameOKIA", "POSF00761"),
                Width = 140,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:right"})
            }
        }
    };
}

@(Html.ASOFTCreateGrid<POSP00691>(gridsetting))
