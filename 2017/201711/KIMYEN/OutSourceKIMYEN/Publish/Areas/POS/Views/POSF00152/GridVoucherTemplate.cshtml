@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@model POSF00152MasterViewModel


@(Html.Kendo().Grid<POSF00152MasterViewModel>()
    .Name("POSF00152Grid")
    .Navigatable(e=>e.Enabled(true))
    .HtmlAttributes( 
            new Dictionary<string, object>
            {
                    { "class", "asf-grid" }, 
                    { "style", "height:330px;" }
            })
    .Columns(columns =>
    {
        columns.Bound("").ClientTemplate("<input name='radio-check' type='radio' onclick='masterGrid_Change(this, \"#=data.APK#\")' class='asoftcheckbox checkboxmaster' />")
                         .Width(30)
                         .Title("");
        columns.Bound("RowNum")
            .Width(30)
            .Title(ASOFTLanguage.FindWordA00("A00.Number"));
        columns.Bound("VoucherNo").Width(150);
        columns.Bound("VoucherDate").Width(100)
            .Format(ASOFTEnvironment.GridFormatDateTime(ASOFTEnvironment.FormatShortDateTime))
            .HtmlAttributes(new { @class = "asf-cols-align-center" });
        columns.Bound("InvoiceNo").Width(120);
        columns.Bound("InvoiceDate").Width(100)
            .Format(ASOFTEnvironment.GridFormatDateTime(ASOFTEnvironment.FormatShortDateTime))
            .HtmlAttributes(new { @class = "asf-cols-align-center" });
        columns.Bound("ObjectID").Width(120);
        columns.Bound("ObjectName").Width(160);
        columns.Bound("Description").Width(120);
    })
    .AutoBind(true)
    .Selectable(m=>m.Type(GridSelectionType.Row).Mode(GridSelectionMode.Single))
    .Scrollable()
    .Events(e=>e.DataBound("ASOFT.asoftGrid.dataBound"))
    .DataSource(dataSource => dataSource
        .Ajax()
        .AutoSync(true)
        .ServerOperation(true)
        .Model(model => model.Id(p => p.APK))
        .Read(read => read.Action("GetGridData", "POSF00152").Data("sendDataFilter"))
    )
)