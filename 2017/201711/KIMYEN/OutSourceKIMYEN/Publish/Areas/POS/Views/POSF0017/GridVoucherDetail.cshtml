                IDColumn = "AdjustQuantity",
                TitleColumn = Html.ASOFTRaw(model => model.AdjustQuantity),
                Width =90,
                VisibleColumn = true,
                ClientTemplate = @"#=getAdjustQuantity(data)#",
                HtmlAttrCoulmns = (new {style = "text-align:right"})
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "Description",
                TitleColumn = Html.ASOFTRaw(model => model.Description),
                EditColumn = true,
                Width = 150,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:left"})
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "APK",
                Width = 36,
                ClientTemplate = @"#=genDeleteBtn(data)#",
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"})
            },
        }
    };
}

@(Html.ASOFTCreateGridEdit<ASOFT.ERP.A00.Entities.Database.POST00171>(gridsetting)
.Events(e=>e.Save("Grid_Save")))

