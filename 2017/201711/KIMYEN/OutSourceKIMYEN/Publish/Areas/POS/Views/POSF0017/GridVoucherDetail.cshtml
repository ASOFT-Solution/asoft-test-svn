@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@model POSF00171ViewModel

@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "POSF00171Grid", 
        Scrollable = true, 
        ControllerName = "POSF0017",
        ActionName = "GetGridDetailData",
        NameEventPost = "SendDataMaster",
        //AddNewRowDisabled = true,
        IsShowCheck = false,

        HtmlAttribute = new
        {
            style = "height:400px;", 
            @class = "asf-grid",
            AddNewRowDisabled = "true"          
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "RowNum",
                ClientTemplate = "#= renderNumber(data) #",
                TitleColumn = ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 30,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryID",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryID),
                Width = 100,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                EditorTemplateName = "POSInventory"
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryName",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryName),
                Width = 150,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "UnitName",
                TitleColumn = Html.ASOFTRaw(model => model.UnitID),
                Width = 100,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "BooksQuantity",
                TitleColumn = Html.ASOFTRaw(model => model.BooksQuantity),
                Width = 90,
                ClientTemplate = @"#=getBooksQuantity(data)#",
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
