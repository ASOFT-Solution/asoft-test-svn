        <div class="asf-content-block-sys left">
           <table class="asf-table-view">
                <tr >
                    <td class="content-label">@Html.DisplayName(ASOFTLanguage.FindWordA00("A00.CreateUserID"))</td>
                    <td class="dot"></td>
                    <td class="content-text">@Html.DisplayFor(model => model.CreateUserID)</td>
                </tr>
                <tr >
                    <td class="content-label">@Html.DisplayName(ASOFTLanguage.FindWordA00("A00.CreateDate"))</td>
                    <td class="dot"></td>
