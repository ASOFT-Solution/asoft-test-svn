@model ASOFT.ERP.ViewModel.POS.POSF00101ViewModel


<div class="container_12">
    <div class="grid_6">
        <table class="asf-table-view">
            <tr>
                <td>@Html.ASOFTCheckbox(model => model.IsS1).DisabledIf(true).CheckedIf(true)</td>
                <td>
                    @(Html.ASOFTTextBox(model => model.S1, htmlStyle: new { width = Unit.Percentage(100) }).ReadOnlyIf(true))
                </td>
            </tr>
            <tr>
                <td>@Html.ASOFTCheckbox(model => model.IsS2)

                </td>
                <td>
                    @(Html.ASOFTBussinessComboBox().ASOFTS2(model => model.S2, 
                    htmlStyle: new { width = Unit.Percentage(100)}))
                </td>
            </tr>
            <tr>
                <td>@Html.ASOFTCheckbox(model => model.IsS3)

                </td>
                <td>
                    @(Html.ASOFTBussinessComboBox().ASOFTS3(model => model.S3, htmlStyle: 
                    new { width = Unit.Percentage(100)}))
                </td>
            </tr>
        </table>
    </div>
    <div class="grid_6 line_left">
        <table class="asf-table-view">
            <tr>
                <td colspan="2">@Html.ASOFTCheckbox(model => model.IsAutomatic)</td>
            </tr>
            <tr>
                <td>@Html.ASOFTLabel(model => model.NNNS)</td>
                <td>
                     @if (Model.FormStatus == ASOFTFormActionType.AddNew)
                     {
                            @(Html.ASOFTBussinessComboBox().ASOFTDisplayType(model => model.NNNS,
                            htmlAttributes: new Dictionary<string, object> {
                                                    {"data-bind","value:ID"}},
                            htmlStyle: new { width = Unit.Percentage(100) }).SelectedIndex(3))
                     }
                       @if (((Model.NNNS == null) && (Model.FormStatus != ASOFTFormActionType.AddNew)) ||
                            (Model.NNNS != null))
                       {
                             @(Html.ASOFTBussinessComboBox().ASOFTDisplayType(model => model.NNNS,
                            htmlAttributes: new Dictionary<string, object> {
                                                    {"data-bind","value:ID"}},
                            htmlStyle: new { width = Unit.Percentage(100) }))
                       }

                </td>
            </tr>
            <tr>
                <td>@Html.ASOFTLabel(model => model.Separator)</td>
                <td>
                     @Html.ASOFTTextBox(model => model.Separator, 
                    htmlStyle: new { width = Unit.Percentage(100), disabled ="disabled" }).DisabledIf(!Model.IsAutomatic)
                </td>
            </tr>
            <tr>
                <td>@Html.ASOFTLabel(model => model.Length)</td>
                <td>
                    @Html.ASOFTTextBox(model => model.Length, 
                    htmlStyle: new { width = Unit.Percentage(100), disabled ="disabled"}).DisabledIf(!Model.IsAutomatic)
                </td>
            </tr>
            <tr>
                <td>@Html.ASOFTCheckbox(model => model.AutoIndex,
                htmlStyle: new {disabled ="disabled"}).DisabledIf(!Model.IsAutomatic)</td>
                <td>
                   @* @Html.ASOFTSpinEdit(model => model.AutoIndexValue, 
                    htmlStyle: new { width = Unit.Percentage(100) })*@
                     @Html.ASOFTTextBox(model => model.AutoIndexValue, 
                    htmlStyle: new { width = Unit.Percentage(100), disabled ="disabled"}).DisabledIf(!Model.AutoIndex)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ASOFTLabel(model => model.Example, 
                    htmlStyle: new { width = Unit.Percentage(100) })
                </td>
                <td>
                   @* @Html.ASOFTTextBox(model => model.Example, 
                    htmlStyle: new { width = Unit.Percentage(100), disabled ="disabled" })*@
                    @Html.ASOFTWrapperTagFor(model => model.Example)
                </td>
            </tr>
        </table>
    </div>
</div>

