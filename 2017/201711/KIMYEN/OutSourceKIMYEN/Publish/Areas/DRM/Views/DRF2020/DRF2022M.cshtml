        </div>
    </div>
    
    <div class="asf-master-content">
        <div class="full-fieldset padding-format full-single">
            <div class="full">
                <table class="asf-table-view">
                    <thead class="hidden">
                        <tr>
                            <td class="content-label"></td>
                            <td class="dot"></td>
                            <td class="content-text"></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="content-label">@Html.ASOFTLabel(model => model.ProcessNote)</td>
                            <td style="width:15px;">:</td>
                            <td title="@Model.ProcessNote">
                                @Html.DisplayFor(model => model.ProcessNote)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
