@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.ViewModel
@using Kendo.Mvc.UI
@model string

@(Html.ASOFTBussinessComboBox()
            .ASOFTGridDistrictID(m=>m, 
                                    ASOFTLanguage.FindWordA00("A00.AT1013_DistrictID"), 
                                    ASOFTLanguage.FindWordA00("A00.AT1013_DistrictName"),
                            option: new ComboOption() { EventRequestEnd = "comboBox_RequestEnd" })
                                    .Events(e =>
                                    {
                                        e.Open("comboBox_Opened1");    
                                        e.Close("comboBoxD_Closed");
                                        e.Change("comboBox_Changed1");                                   
                                    }
                                ))