@using ASOFT.ERP.ViewModel.DRM
@model DRF0230ViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(m => m.DRF0230Title, "DRF0230").ToHtmlString();
    ViewBag.Width = 900;
}

@Html.ASOFTHidden("UrlUpdate", Url.Action("Update"))
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "DRF0230" }))
{
 <div class="asf-form-container">
    <div class="form-content">
        <table class="asf-table-view">
            <tr>
                <td class="drf-caption">@Html.ASOFTLabel(model => model.GroupID)</td>
                <td class="drf-td-comboBox">
                    @(Html.ASOFTBussinessComboBox().ASOFTDRMGroupID(model=>model.GroupID)
                            .SelectedIndex(0)
                            .Events(e=>e.DataBound("DRF0230.groupID_DataBound").Change("DRF0230.groupID_Changed"))
                            )
                </td>
                <td>&nbsp;</td>
                <td class="drf-td-text">
                    @Html.ASOFTTextBox(model => model.GroupName)
                </td>
            </tr>
            <tr>
                <td colspan="4">
                     @Html.Partial("DRF0230Grid")
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="asf-form-button">
    <table class="asf-table-view">
        <tr>
            <td align="right">
                <div class="asf-popup-button-container">
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                              .Name("BtnClose")
                              .Events(e => e.Click("DRF0230.btnClose_Click"))
                              )
                    </div>
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnConfig"))
                                .Name("BtnConfig")
                                .Events(e => e.Click("DRF0230.btnConfig_Click"))
                                )
                    </div>                          
                </div>
            </td>
        </tr>
    </table>
</div>
    
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/DRM/Content/Common.css")" rel="stylesheet" type="text/css" />
}

@section jsFeature {
    <script src="@Url.Content("~/Areas/DRM/Scripts/DRF0230/DRF0230.js?v=" + ASOFTEnvironment.Version)"></script>
}