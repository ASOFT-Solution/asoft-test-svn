@using ASOFT.ERP.A00.Entities.Common;
@using ASOFT.ERP.ViewModel.MT;

@model MTF1010ViewModel
@using (Html.BeginForm(null, null, FormMethod.Post, new {id = "MTF1011"}))
{
    <div class="asf-form-container">
        <div class="form-content">
            <table class="asf-table-view" >
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.LevelID)</td>
                    <td class="asf-td-field" colspan="2">
                        @(Html.ASOFTTextBox(model => model.LevelID, null, new { width = Unit.Percentage(100) })
                                .ReadOnlyIf(Model.FormStatus != ASOFTFormActionType.AddNew))
                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.LevelName)</td>
                    <td class="asf-td-field" colspan="2">
                        @Html.ASOFTTextBox(model => model.LevelName, null, new {width = Unit.Percentage(100)})
                   </td>
                </tr>
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.Notes)</td>
                    <td class="asf-td-field" colspan="2">
                        @Html.ASOFTTextArea(model=>model.Notes,null,new { width = Unit.Percentage(98)})
                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption"></td>
                    <td class="asf-td-field">
                        @Html.ASOFTCheckbox(model => model.IsCommon)
                    </td>
                    <td >
                        @Html.ASOFTCheckbox(model => model.Disabled).HideIf(Model.FormStatus == ASOFTFormActionType.AddNew)
                        @(Html.ASOFTHidden("LastModifyDate", 
                            Model.LastModifyDate.HasValue ? Model.LastModifyDate.Value.ToString("dd/MM/yyyy HH:mm:ss.fff") : ""))
                    </td>
                </tr>
            </table>
        </div>
        <div class="asf-form-button">
            <table class="asf-table-view">
                <tr>
                    <td align="right">
                        <div class="asf-popup-button-container">
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                                      .Name("btnClose").Events(e => e.Click("MTF1010.btnCloseClick")))
                            </div>
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveCopy"))
                                        .Name("btnSaveCopy").Events(e => e.Click("MTF1010.btnSaveCopyClick"))
                                        .HideIf(Model.FormStatus != ASOFTFormActionType.AddNew))
                            </div>
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveNew"))
                                        .Name("btnSaveNext").Events(e => e.Click("MTF1010.btnSaveClick"))
                                        .HideIf(Model.FormStatus != ASOFTFormActionType.AddNew))
                            </div>
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                    .Name("btnSaveClose").Events(e => e.Click("MTF1010.btnSaveCloseClick"))
                                    .HideIf(Model.FormStatus == ASOFTFormActionType.AddNew))
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    
}
