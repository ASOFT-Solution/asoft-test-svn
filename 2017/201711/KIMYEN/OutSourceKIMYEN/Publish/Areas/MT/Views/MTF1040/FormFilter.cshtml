@using System.Web.UI.WebControls
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Entities.Common
@using ASOFT.ERP.ViewModel
@model ASOFT.ERP.ViewModel.MT.MTF1040ViewModel
<!-- Form Filter -->
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormFilter" }))
{
    <div class="asf-filter-container">
        <div class="asf-filter-content-block">
            <div class="asf-filter-main">
                <div class="asf-filter-label">
                    @Html.ASOFTLabel(model => model.DivisionIDFilter)
                </div>
                <div class="asf-filter-input">
                    @(Html.ASOFTBussinessComboBox().ASOFTDivisionIDList(model => model.DivisionIDFilter, null,
                          htmlStyle: new { width = Unit.Percentage(100) }))
                </div>
            </div>
            <div class="asf-filter-main">
                    <div class="asf-filter-label">
                        @Html.ASOFTLabel(model => model.ClassIDFilter)
                    </div>
                    <div class="asf-filter-input">
                        @Html.ASOFTTextBox(model => model.ClassIDFilter, htmlStyle: new { width = Unit.Percentage(100) })
                    </div>
            </div>
        </div>
        <div class="horz-line-left"></div>
         <div class="horz-line-right"></div>
        <div class="asf-filter-content-block">
            <div class="asf-filter-main">
                <div class="asf-filter-label">
                    @Html.ASOFTLabel(model => model.ClassNameFilter)
                </div>
                <div class="asf-filter-input">
                    @Html.ASOFTTextBox(model => model.ClassNameFilter, htmlStyle: new { width = Unit.Percentage(100) })
                </div>
            </div>

            <div class="asf-filter-main">
                <div class="asf-filter-label">
                    @Html.ASOFTLabel(model => model.CourseIDFilter)
                </div>
                <div class="asf-filter-input">
                    @(Html.ASOFTBussinessComboBox().ASOFTCourseID(model => model.CourseIDFilter, null,
                                                                htmlStyle: new { width = Unit.Percentage(100) }))
                </div>
            </div>

        </div>
        <div class="horz-line-left"></div>
         <div class="horz-line-right"></div>
        <div class="asf-filter-content-block">
            <div class="asf-filter-main">
                <div class="asf-filter-label">
                    @Html.ASOFTLabel(model => model.LevelIDFilter)
                </div>
                <div class="asf-filter-input">
                    @(Html.ASOFTBussinessComboBox().ASOFTLevelID(model => model.LevelIDFilter, null,
                          htmlStyle: new { width = Unit.Percentage(100) }))
                </div>
            </div>
            <div class="asf-filter-main">
                <div class="asf-filter-label">
                    @Html.ASOFTLabel(model => model.SchoolTimeIDFilter)
                </div>
                <div class="asf-filter-input">
                    @(Html.ASOFTBussinessComboBox().ASOFTSchoolTimeID(model => model.SchoolTimeIDFilter, null,
                          htmlStyle: new { width = Unit.Percentage(100) }))
                </div>
            </div>
        </div>
    </div>
}