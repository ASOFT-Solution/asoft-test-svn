@using ASOFT.ERP.A00.Entities.Common;
@using ASOFT.ERP.ViewModel.MT

@model MTF1010ViewModel
@{
    ViewBag.Title = Html.ASOFTPageTitle(m => m.MTF1010Title, "MTF1010").ToHtmlString();
}

@section jsFeature{
    <script src="@Url.Content("~/Areas/MT/Scripts/MTF1010.js")"></script>
}
@Html.ASOFTHidden("UrlMTF1011", Url.Action("MTF1011"))
@Html.ASOFTHidden("UpdateRecord", Url.Action("UpdateRecord"))
@Html.ASOFTHidden("UrlDeleted", Url.Action("Delete"))
@Html.ASOFTHidden("UrlInsert", Url.Action("Insert"))
<div id="contentMaster">
    <div class="asf-panel-filter">
    @Html.ASOFTHeader(new HeaderModel() { Title = Html.ASOFTRaw(m => m.MTF1010Title), Breakcrumb = true })
        @Html.Partial("FormFilter", Model)
    </div>
    <div class="asf-button-container">
        <div class="asf-button-right-container">
            <div class="asf-button-right">
                @(Html.ASOFTSearchButton()
                            .Name("btnFilterData")
                                    .Events(ev => ev.Click("MTF1010.filterData"))
                                    .Content(ASOFTLanguage.FindWordA00("A00.btnFilter"))
                      )
                       
                @(Html.ASOFTSearchResetButton()
                            .Name("btnResetData")
                            .Events(ev => ev.Click("MTF1010.resetFormFilter"))
                            .Content(ASOFTLanguage.FindWordA00("A00.btnResetFilter"))
                )
            </div>
        </div>
    </div>
    <div class="asfbtn-left">
        @Html.Partial("~/Views/Shared/EditorTemplates/Toolbar.cshtml", @Model.Toolbar1)  
    </div>
    <div>
        @Html.Partial("GridLevel")
    </div>
</div>


@(Html.ASOFTPopup()
          .Name("MTF1011Popup")
          .Width(500)
          .Title(Html.ASOFTPageTitle(m => m.MTF1011Title, "MTF1011").ToHtmlString()))
