@model ASOFT.ERP.ViewModel.MT.MTF1000ViewModel

@helper CourseInfo(){
<div id="viewPartial">
    <div class="asf-master-content">
        <div class="asf-content-block first">
           <table class="asf-table-view">
                <tr >
                    <td class="content-label">@Html.DisplayNameFor(model=>model.CourseID)</td>
                    <td class="dot"></td>
                    <td class="content-text">@Html.DisplayFor(model=>model.CourseID)</td>
                </tr>
                <tr >
                    <td class="content-label">@Html.DisplayNameFor(model=>model.CourseName)</td>
                    <td class="dot"></td>
                    <td class="content-text" title="@Model.CourseName">@Html.DisplayFor(model=>model.CourseName)</td>
                </tr>
                <tr >
                    <td class="content-label">@Html.DisplayNameFor(model => model.DivisionID)</td>
                    <td class="dot"></td>
                    <td class="content-text">@Html.DisplayFor(model => model.DivisionID)</td>
                </tr>
            </table>
          </div>
        <div class="asf-content-block middle">
           <table class="asf-table-view">
                <tr >
                    <td class="content-label">@Html.DisplayNameFor(model=>model.BeginDate)</td>
                    <td class="dot"></td>
                    <td class="content-text">@Html.DisplayFor(model=>model.BeginDate)</td>
                </tr>
               <tr >
                   <td class="content-label">@Html.DisplayNameFor(model=>model.EndDate)</td>
                   <td class="dot"></td>
                   <td class="content-text">@Html.DisplayFor(model=>model.EndDate)</td>
               </tr>
               <tr >
                   <td class="content-label">@Html.DisplayNameFor(model => model.IsCommon)</td>
                   <td class="dot"></td>
                   <td class="content-text">
                       @{ string common = Model.IsCommon ? ASOFTLanguage.FindWordA00("A00.Yes") : ASOFTLanguage.FindWordA00("A00.No"); }
                       @common
                   </td>
               </tr>
            </table>
        </div>
        <div class="asf-content-block last">
             <table class="asf-table-view">
                <tr >
                    <td class="content-label">@Html.DisplayNameFor(model => model.Disabled)</td>
                    <td class="dot"></td>
                    <td class="content-text">
                         @{ var disabled = Model.Disabled ? ASOFTLanguage.FindWordA00("A00.Yes") : ASOFTLanguage.FindWordA00("A00.No"); }
                            @disabled
                     </td>
                </tr>
                <tr >
                    <td class="content-label">@Html.DisplayNameFor(model => model.Notes)</td>
                    <td class="dot"></td>
                    <td class="content-text" title="@Model.Notes">
                        <div class='content-ellipsis'>@Html.DisplayFor(model => model.Notes)</div>
                    </td>
                </tr>
            </table>
        </div>
    </div>  
</div>
}

@(Html.ASOFTPanel()
.Name("panelbar")
.Events(m => m.Activate("ASOFT.panelFormat.fitColumnHeight"))
.HtmlAttributes(new { @class = "block-panel-master" })
//.Animation(animation => animation.Enable(true))
.Items(panelbar =>
{
    panelbar.Add().Text(Html.ASOFTRaw(model=>model.MTF1002PanelFirstTitle))
        .HtmlAttributes(new {@class = "block-panel-master-header"})
        .Expanded(true).Content(this.CourseInfo().ToHtmlString());

    panelbar.Add().Text(ASOFTLanguage.FindWordA00("A00.SystemInfo")).HtmlAttributes(new { @class = "block-panel-master-header" })
            .Content(Html.Partial("~/Views/Shared/EditorTemplates/SystemInfo.cshtml", Model.SystemInfo).ToHtmlString());

    panelbar.Add().Text(ASOFTLanguage.FindWordA00("A00.History"))
        .HtmlAttributes(new { @class = "block-panel-master-header" }).Content(ASOFTLanguage.FindWordA00("A00.History"));

    panelbar.Add().Text(ASOFTLanguage.FindWordA00("A00.Attach"))
        .HtmlAttributes(new { @class = "block-panel-master-header" }).Content(ASOFTLanguage.FindWordA00("A00.Attach"));

}))