
@model ASOFT.ERP.ViewModel.MT.MTF2010ViewModel
@{
    ViewBag.Title = Html.ASOFTPageTitle(model => model.MTF2010Title, "MTF2010").ToHtmlString();
}

@section jsFeature{
    <script src="@Url.Content("~/Areas/MT/Scripts/MTF2010.js")"> </script>
    <script src="@Url.Content("~/Areas/MT/Scripts/MTF0060.js")"> </script>
    <script src="@Url.Content("~/Areas/MT/Scripts/MTF0080.js")"> </script>
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/MT/Content/MTF2010.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/MT/Content/MTF0080.css")" rel="stylesheet" type="text/css" />
}

<div id="contentMaster">
    <div class="asf-panel-filter">
        @Html.ASOFTHeader(new HeaderModel {Title = Html.ASOFTRaw(model => model.MTF2010Title), Breakcrumb = true})
        @Html.Partial("FormFilter", Model)
    </div>

    <div class="asf-button-container">
        <div class="asf-button-right-container">
            <div class="asf-button-right">
                <div>
                    @(Html.ASOFTSearchButton()
                          .Name("MTF2010BtnFilter")
                          .Events(ev => ev.Click("MTF2010Param.filterData"))
                          )
                </div>
                <div>
                    @(Html.ASOFTSearchResetButton()
                          .Name("btnClearFilter")
                          .Events(ev => ev.Click("MTF2010Param.resetForm"))
                          )
                </div>
            </div>
        </div>
    </div>
    <div class="asfbtn-left">
        @Html.Partial("~/Views/Shared/EditorTemplates/Toolbar.cshtml", Model.Toolbar1 ?? new ASOFTToolBarViewModel())
    </div>
    @Html.Partial("GridMaster", Model)
</div>

@Html.ASOFTHidden("UrlMTF2010Delete", Url.Action("DoDelete"))
@Html.ASOFTHidden("UrlMTF2011", Url.Action("MTF2011"))
@Html.ASOFTHidden("UrlMTF2011Insert", Url.Action("DoInsert"))
@Html.ASOFTHidden("UrlMTF2011Update", Url.Action("DoUpdate"))
@Html.ASOFTHidden("UrlMTF2012ExportExcel", Url.Action("ExportExcel"))
@Html.ASOFTHidden("UrlMTF2012ReportViewer", Url.Action("ReportViewer"))
@Html.ASOFTHidden("UrlMTF0060", Url.Action("Index", "MTF0060"))
@Html.ASOFTHidden("UrlPrePrintOrExport", Url.Action("PrePrintOrExport"))
@Html.ASOFTHidden("UrlPreExportData", Url.Action("PreExportData"))
@Html.ASOFTHidden("UrlExportData", Url.Action("ExportData"))

<!-- Popup -->
@(Html.ASOFTPopup()
      .Name("MTF2011Popup")
      .Width(800)
      .Title(Html.ASOFTPageTitle(model => model.MTF2011Title, "MTF2011").ToHtmlString()))


@(Html.ASOFTPopup()
      .Name("MTF0080Popup")
      .Width(650)
      .Title(Html.ASOFTPageTitle(m => m.MTF0080Title, "MTF0080").ToHtmlString())
      )

@(Html.ASOFTPopup()
      .Name("MTF0060Popup")
      .Width(400)
      .Title(Html.ASOFTPageTitle(m => m.MTF0060ReportTitle, "MTF0060").ToHtmlString())
      )