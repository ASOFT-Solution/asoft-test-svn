@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.S
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Entities
@using ASOFT.ERP.S.Entities


@model ASOFT.ERP.ViewModel.S.SF1012ViewModel

@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "GridGroupDetail", 
        Scrollable = true, 
        ControllerName = "SF1010",
        ActionName = "GetGridDetailData",
        IsAutoHeight =  true,
        NameEventPost = "sendDataFilter",
        IsShowCheck = true,
        HtmlAttribute = new
        {
            style = "height:340px;", 
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                 TitleColumn = ASOFT.ERP.A00.Core.ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 30,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                ClientTemplate = "#= renderNumber(data) #",
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "UserID",
                TitleColumn = Html.ASOFTRaw(model => model.UserID),
                Width = 150,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "UserName",
                TitleColumn = Html.ASOFTRaw(model => model.UserName),
                Width = 120,
                VisibleColumn = true,
            },
        }
    };
}

@(Html.ASOFTCreateGrid<ASOFT.ERP.S.Entities.SP10121>(gridsetting,false))