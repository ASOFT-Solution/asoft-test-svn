@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.S 
@using ASOFT.ERP.A00.Core
@model SF1050ViewModel
@{
    var gridsetting = new ASOFTGridSetting 
    {
        NameGrid = "SF1050Grid",
        Scrollable = true,
        ControllerName = "SF1050",
        ActionName = "GridData",
        NameEventPost = "sendDataFilter",
        IsShowCheck = true, 
        HtmlAttribute = new {   style = "height:550px;", @class = "asf-grid"} ,  
        ListGridColumn= new List<ASOFTGridColumnSetting>
        {
             new ASOFTGridColumnSetting
            {
               IDColumn = "RowNum",
              TitleColumn = ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 50,
                VisibleColumn = true,
                
            },
              new ASOFTGridColumnSetting
            {
               IDColumn = "APK",
                Width = 50,
                VisibleColumn = false,
                
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "RoleID",
                TitleColumn = Html.ASOFTRaw(model => model.RoleID),
                ClientTemplate = @"<a class='asf-grid-link' onclick=shopDetail_Click('#:APK#')>#:RoleID#</a>",
                Width = 100,
                VisibleColumn = true,
               
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "RoleName",
                TitleColumn = Html.ASOFTRaw(model => model.RoleName),
                Width = 150,
                VisibleColumn = true,
                          
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "ParentRoleID",
                TitleColumn = Html.ASOFTRaw(model => model.ParentRoleID),
                Width = 200,
                VisibleColumn = true,
                           
            },
              new ASOFTGridColumnSetting
            {
                IDColumn = "Notes",
                TitleColumn = Html.ASOFTRaw(model => model.Notes),
                Width = 150,
                VisibleColumn = true,
                       
            }    
        }   
       
      };            
   }
@(Html.ASOFTCreateGrid<ASOFT.ERP.A00.Entities.Database.ST10501>(gridsetting,false)) 
  
 
            
            
       
        
        
        
        
    
    
    
    
    
   
    
    


