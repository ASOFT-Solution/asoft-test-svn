@using ASOFT.ERP.A00.Core;


@model ASOFT.ERP.ViewModel.S.SF1011ViewModel
    
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";

    ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "SF1011").ToHtmlString();
    ViewBag.Width = 500;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "SF1011"
}))
{  
    <table class="asf-table-view">
        <thead>
            <tr class="tr-zero-height">
                @*<td class ="width150px"></td>
                <td class ="width350px"></td>*@
            </tr> 
        </thead>
        <tbody>
            <tr>
                @if (Model.FormStatus == ASOFTFormActionType.AddNew)
                {
                    <td>@Html.ASOFTLabel(model => model.GroupID)</td>
                    <td>
                    @(Html.ASOFTTextBox(model => model.GroupID, htmlAttribute: new { initValue = Model.GroupID }, checkRegularExp: true))
                    </td>
                }
                  @if (Model.FormStatus == ASOFTFormActionType.Edit)
                {
                    <td>@Html.ASOFTLabel(model => model.GroupID)</td>
                    <td>
                    @(Html.ASOFTTextBox(model => model.GroupID).ReadOnlyIf(true))
                    </td>
                }

                
            </tr>
            <tr>
                <td>@Html.ASOFTLabel(model => model.GroupName)</td>
                <td>
                    @(Html.ASOFTTextBox(model => model.GroupName))
                </td>
            </tr>

            @if (Model.FormStatus == ASOFTFormActionType.Edit)
            {
             <tr>
                 <td></td>
                <td>
                    @(Html.ASOFTCheckbox(model => model.Disabled))
                </td>
            </tr>
            }
        </tbody>
    </table>
    
    <div class="clearfix"></div>
    <div class="asf-form-button">
        <table class="asf-table-view">
            <tr>
                <td>@*align="right"*@
                    <div class="asf-popup-button-container">
                               @if (Model.FormStatus == ASOFTFormActionType.AddNew)
                               {
                                   <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                                      .Name("BtnCloseNew").Events(e=> e.Click("popupClose"))
                                      )
                                </div>
                                <div>
                                    @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveCopy"))
                                      .Name("BtnSaveDetail").Events(e=> e.Click("popupSaveCopy"))
                                      )
                                </div>
                                <div>
                                    @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveNew"))
                                      .Name("BtnSaveClose").Events(e => e.Click("popupSaveNew"))
                                      )
                                </div>
                              }
                              @if (Model.FormStatus == ASOFTFormActionType.Edit)
                              {
                                <div>
                                    @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                                      .Name("BtnCloseUpdate")
                                      .Events(e => e.Click("popupClose")))
                                </div>    
                                <div>
                                    @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                      .Name("BtnSave")
                                      .Events(e => e.Click("popupSaveUpdate"))
                                       )
                                </div>
                              }
                               
                    </div>
                </td>
            </tr>
        </table>
    </div>
}
@Html.ASOFTHidden("UrlInsert", Url.Action("Insert"))
@Html.ASOFTHidden("UrlUpdate", Url.Action("Update"))
@section jsFeature {
    <script src="@Url.Content("~/Areas/S/Scripts/SF1011.js?v=" + ASOFTEnvironment.Version)" type="text/javascript"></script>
}