@using System.Web.UI.WebControls;
@using ASOFT.ERP.A00.Core;
@using ASOFT.ERP.A00.Entities.Database
@model ASOFT.ERP.ViewModel.S.SF1051ViewModel

@{
   
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "SF1051Grid",
        NameEventPost = "gridSendDataEdit",
        Scrollable = true,
        IsShowCheck = false,
        ActionName = "GetGridDetail",
        ControllerName = "SF1050",
        IsAutoHeight = false,
        HtmlAttribute = new { @class = "asf-grid", AddNewRowDisabled = "true" },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "RowNum",
                TitleColumn = ASOFTLanguage.FindWordA00("A00.Order"),
                ClientTemplate = "#= renderNumber() #",
                HtmlAttrCoulmns = new {  @class = "asf-cols-align-center" },
                Width = 50,
                VisibleColumn = true,
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "DataName",
                TitleColumn = Html.DisplayNameFor(model => model.DataID).ToHtmlString(),
                Width = 100,
                EditColumn = false,
                VisibleColumn = true
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "TypeName",
                TitleColumn = Html.DisplayNameFor(model => model.TypeID).ToHtmlString(),
                Width = 100,
                EditColumn = true,
                VisibleColumn = true,
                EditorTemplateName = "ComboBoxTypeID"
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "TypeID",
                Width = 100,
                VisibleColumn = false
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "DataID",
                Width = 100,
                VisibleColumn = false
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "APK",
                Width = 100,
                EditColumn = false,
                VisibleColumn = false
            },
        }
    };
}

@{
        @(Html.ASOFTCreateGridEdit<ASOFT.ERP.A00.Entities.Database.ST10502>(gridsetting,false))
}

