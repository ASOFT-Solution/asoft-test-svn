@model SF0004ViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(m => m.Title, "SF0004").ToHtmlString();
    ViewBag.Width = 550;
}
@Html.ASOFTHidden("UrlUpdate", Url.Action("Update")) 
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SF0004" }))
{ 
    <div class="asf-form-container">
        <div class="form-content"> 
            <table class="asf-table-view">
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.ModuleID)</td>
                    <td class="asf-td-field" colspan="2">
                        @(Html.ASOFTBussinessComboBox().ASOFTModuleID_S(model => model.ModuleID)
                              .SelectedIndex(0)
                              .Events(e=>e.Change("SF0004.moduleID_Changed")))
                              
                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.GroupID)</td>
                    <td class="asf-td-field" colspan="2">
                        @(Html.ASOFTBussinessComboBox().ASOFTGroupID(model => model.GroupID)
                              .SelectedIndex(0)
                              .Events(e=>e.Change("SF0004.groupID_Changed")))
                                
                    </td>
                </tr>
                 <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.DataTypeID)</td>
                   <td class="asf-td-field" colspan="2">
                         @(Html.ASOFTBussinessComboBox().ASOFTDataTypeID(model => model.DataTypeID)
                              .SelectedIndex(0)
                               .Events(e=>e.Change("SF0004.dataTypeID_Changed")))
                             
                    </td>
                </tr>
            </table>
        </div>
    <div class="form-content">
                 <table class="asf-table-view">
                <tr>
                      <td class="asf-td-caption" colspan="3">
                          @Html.Partial("GridScreenID")  
                      </td>
                 </tr>
                 </table>
    </div> 
     </div>       
    <div class="asf-form-button">
        <table class="asf-table-view">
            <tr>
                <td align="right">
                    <div class="asf-popup-button-container">
                        <div>
                            @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                                  .Name("BtnClose")
                                  .Events(e => e.Click("SF0004.btnClose_Click")))
                        </div>
                        <div>
                            @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                  .Name("BtnSaveClose")
                                  .Events(e => e.Click("SF0004.btnSave_Click")))
                        </div>
                            
                    </div>
                </td>
            </tr>
        </table>
    </div>

} 
 @section jsFeature {
    <script src="@Url.Content("~/Areas/S/Scripts/SF0004.js?v=" + ASOFTEnvironment.Version)"></script>
 }   
@section styleFeature{
    <link href="@Url.Content("~/Areas/S/Content/SF0004.css")" rel="stylesheet" type="text/css" />
}
