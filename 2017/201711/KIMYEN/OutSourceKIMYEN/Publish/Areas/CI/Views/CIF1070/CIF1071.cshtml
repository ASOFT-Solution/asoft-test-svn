@using ASOFT.ERP.ViewModel.CI
@model CIF1071ViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(m => m.Title, "CIF1071").ToHtmlString();
    ViewBag.Width = 500;

    // Form Status
    bool isInsert = Model.FormStatus.Equals(ASOFTFormActionType.AddNew);
}

@using (Html.BeginForm(null, null, FormMethod.Post, new {id = "CIF1071"}))
{
 <div class="asf-form-container">
    <div class="form-content">
            <table class="asf-table-view">    
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.CityID)</td>
                    <td class="asf-td-field" colspan="2">
                         @(Html.ASOFTBussinessComboBox()
                                .ASOFTCICityID(model => model.CityID, ASOFTLanguage.FindWordA00("A00.AT1002_CityID"), 
                                    ASOFTLanguage.FindWordA00("A00.AT1002_CityName"),
                                    option: new ComboOption() { EventRequestEnd = "CIF1070.comboBox_RequestEnd" })
                                .Events(e=>e.Change("CIF1070.comboBox_Changed")).Enable(isInsert))
                        @Html.ASOFTHidden(model => model.CityID)

                        </td>
                </tr>            
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.DistrictID)</td>
                    <td class="asf-td-field" colspan="2">
                        @(Html.ASOFTTextBox(model => model.DistrictID, checkRegularExp: true).ReadOnlyIf(Model.FormStatus != ASOFTFormActionType.AddNew))                        
                        @Html.ASOFTHidden(AT1002.COL_LASTMODIFYDATE, Model.LastModifyDate != null ? Model.LastModifyDate.Value.ToString("dd/MM/yyyy HH:mm:ss.fff") : "")
                         </td>
                </tr>
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.DistrictName)</td>
                    <td class="asf-td-field" colspan="2">@(Html.ASOFTTextBox(model => model.DistrictName))</td>
                </tr>
                <tr>
                    <td class="asf-td-caption"></td>
                    <td class="asf-td-field">
                        @Html.ASOFTCheckbox(model=>model.IsCommon)
                       
                    </td>
                    <td class="asf-td-field">
                        @Html.ASOFTCheckbox(model=>model.Disabled)
                    </td>
                </tr>
            </table>
    </div>
</div>
<div class="asf-form-button">
    <table class="asf-table-view">
        <tr>
            <td align="right">
                <div class="asf-popup-button-container">
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                              .Name("BtnClose")
                              .Events(e => e.Click("CIF1071.btnClose_Click")))
                    </div>
                    <div >
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveCopy"))
                                .Name("BtnSaveCopy")
                                .Events(e => e.Click("CIF1071.btnSaveCopy_Click"))
                                .HideIf(!isInsert))
                    </div>
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveNew"))
                                .Name("btnSaveCIF1071")
                                .Events(e => e.Click("CIF1071.btnSaveNext_Click"))
                                .HideIf(!isInsert))
                    </div>
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                .Name("BtnSaveClose")
                                .Events(e => e.Click("CIF1071.btnSave_Click"))
                                //.Enable(false)
                                .HideIf(isInsert))
                    </div>
                            
                </div>
            </td>
        </tr>
    </table>
</div>
}

