@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.SO
@using ASOFT.ERP.SO.Entities
@model SOF0006GridViewModel
@{
    var gridsetting = new ASOFTGridSetting
                          {
                              NameGrid = "SOF0006Grid",
                              NameEventPost = "SOF0006.sendDataFilter",
                              Scrollable = true,
                              ActionName = "GetGridData",
                              ControllerName = "SOF0006",                              
                              HtmlAttribute = new { @class = "asf-grid", style = "height:300px;" },
                              IsShowCheck = false,
                              IsAutoHeight = false,
                              ListGridColumn = new List<ASOFTGridColumnSetting>{                           
                                    new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = SOF0006Grid.COL_INVENTORYTYPEID,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.InventoryTypeID),
                                                               Width = 150,
                                                               VisibleColumn = true
                                                           },
                                       new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = SOF0006Grid.COL_INVENTORYTYPENAME,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.InventoryTypeName),
                                                               Width = 150,
                                                               VisibleColumn = true
                                                           }
                                                           
                              }
                          };
}

@(Html.ASOFTCreateGridNotPagging<SOF0006Grid>(gridsetting))