@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.ViewModel.SO
@model ASOFT.ERP.ViewModel.SO.DateSearch
@using ASOFT.ERP.ViewModel.Helper;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //ViewBag.Title = "Index";
    @Html.ASOFTPageTitle(model => model.SOF2040Title, "SOF2040").ToHtmlString();
                                                                               string username = LocalizedHelper.GetLocalizedResourceString("SOF2040.username", "SOF2040");
                                                                               string userid = LocalizedHelper.GetLocalizedResourceString("SOF2040.userid", "SOF2040");
}
<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />

<link type="text/css" rel="stylesheet" href="~/Areas/SO/Content/SOF2040.css" />

<div class="wrapper">
    <aside class="aside">
        <div class="aside-inner">
            <nav class="sidebar">
                <a id="btnminibar" data-minibar="false"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a>
                <div id="users">
                    <div class="header">
                        @Html.ASOFTLabel(Model=>Model.ListEmployeeID)
                        <button class="btn-x pull-right fa fa-search collapsed" data-toggle="collapse" data-target="#controls"></button>
                    </div>
                    <div class="controls collapse" id="controls">
                        <form class="form" role="form" action="" method="get">
                            <div class="form-group">
                                @Html.ASOFTTextBox(Model=>Model.username,null,new
                                {
                                    placeholder = username
                                })
                            </div>
                            <div class="form-group">
                                @Html.ASOFTTextBox(Model=>Model.userid, null,new
                                {
                                    placeholder = userid
                                })
                            </div>
                            <div class="form-group">
                                @Html.ASOFTDateEdit(model => model.ufrom_date)
                            </div>
                            <div class="form-group">
                                @Html.ASOFTDateEdit(model => model.uto_date)
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-default"><span class="span">@Html.ASOFTLabel(Model => Model.Search)</span></button>
                            </div>
                        </form>
                    </div>

                    <ul class="nav"></ul>
                </div>
                <div id="uhistories">
                    <div class="header">
                        <button id="btn-back" class="btn-x fa fa-mail-reply"></button>
                        @Html.ASOFTLabel(Model => Model.HistoryEmployeeID)
                    </div>
                    <div class="controls">
                        <form class="form" role="form" id="searchworkdate">
							<div class="form-group">
								<label>@Html.ASOFTLabel(Model => Model.EmployeeID) <span id="xuserid"></span></label>
							</div>
                            <div class="form-group">
                                @Html.ASOFTDateEdit(model => model.from_date)
                            </div>
                            <div class="form-group">
                                @Html.ASOFTDateEdit(model => model.to_date)
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-default"><span class="span">@Html.ASOFTLabel(Model => Model.Search)</span></button>
                            </div>
                        </form>
                    </div>
                    <ul id="salemandates"></ul>
                </div>
            </nav>
        </div>
    </aside>
    <section>
        <div class="content-wrapper">
            <div class="content-body">
                <div id="map"></div>
                <div id="maploading"></div>
            </div>
        </div>
    </section>
</div>

<script>
    var timeReload = @ViewBag.TimeReload;
    var salemans = [@Html.Raw(ViewBag.Salemans)];
    var salemansnow = [@Html.Raw(ViewBag.SalemansNow)];
</script>

<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="/Scripts/kendo.all.min.js"></script>
<script type="text/javascript" src="/Areas/SO/Scripts/SOF2040/SOF2040.js"></script>
<script async defer src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBZDjL-siXmG8KpCPL5IYMCaNll6LWWQX0&callback=initMap&libraries=geometry"></script>
<script type="text/javascript">
$(document).ready(function(){
    $(".date-picker").kendoDatePicker({
        format: "dd/MM/yyyy"
    });

    $('#btnminibar').on('click', function(){
        if($(this).attr('data-minibar') == 'false'){
            $(this).attr('data-minibar', true);
            $('.wrapper').addClass('minibar');
        }else{
            $(this).attr('data-minibar', false);
            $('.wrapper').removeClass('minibar');
        }
    });
});
</script>
@Html.ASOFTHidden("UrlSearch", Url.Action("Search", "SOF2040"))