
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.SO
@using ASOFT.ERP.SO.Entities
@model SOF0005GridViewModel
@{
    var gridsetting = new ASOFTGridSetting
                          {
                              NameGrid = "SOF0005Grid",
                              NameEventPost = "SOF0005.sendDataFilter",
                              Scrollable = true,
                              ActionName = "GetGridData",
                              ControllerName = "SOF0005",                              
                              HtmlAttribute = new { @class = "asf-grid", style = "height:300px;" },
                              IsShowCheck = false,
                              IsAutoHeight = false,
                              ListGridColumn = new List<ASOFTGridColumnSetting>{         
           
                                    new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = SOF0005Grid.COL_USERID,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.UserID),
                                                               Width = 150,
                                                               VisibleColumn = true
                                                           },
                                       new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = SOF0005Grid.COL_USERNAME,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.UserName),
                                                               Width = 150,
                                                               VisibleColumn = true
                                                           }
                                                           
                              }
                          };
}

@(Html.ASOFTCreateGridNotPagging<SOF0005Grid>(gridsetting))