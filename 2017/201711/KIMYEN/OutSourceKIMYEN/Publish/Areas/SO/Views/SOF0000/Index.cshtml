@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.ViewModel.SO
@using ASOFT.ERP.ViewModel
@model SOF0000ViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(m => m.SOF0000Title, "SOF0000").ToHtmlString();
    ViewBag.Width = 600;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SOF0000" }))
{
    <div class="asf-form-container">
        <div class="form-content">
            <table class="asf-table-view">
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.CurrencyID)</td>
                    <td class="asf-td-field" colspan="2">
                        @Html.ASOFTBussinessComboBox().ASOFTCurrencyID(model=>model.CurrencyID)
                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption">@Html.ASOFTLabel(model => model.InventoryTypeID)</td>
                    <td class="asf-td-field" colspan="2">
                        @(Html.ASOFTButton("...")
                                .Name("btnInventoryTypeID")                           
                                .Events(e => e.Click("SOF0000.btnInventoryTypeID_Click"))
                                )
                    </td>
                </tr>
            </table>
        </div>
    </div>
    
    <div class="asf-form-container">
        @Html.ASOFTLabel(model => model.VoucherTypeTitle)

        <div class="form-content">
            @Html.Partial("GetGridData", new SOF0000GridViewModel())
        </div>
    </div>
}
<div class="asf-form-button">
    <table class="asf-table-view">
        <tr>
            <td align="right">
                <div class="asf-popup-button-container">      
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                              .Name("BtnClose")
                                .Events(e => e.Click("SOF0000.btnClose_Click"))
                              )
                    </div>                              
                     <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                .Name("btnSave")
                                .Events(e => e.Click("SOF0000.btnSave_Click"))
                                )
                    </div>
                                         
                </div>
            </td>
        </tr>
    </table>
</div>



@section styleFeature{
    <link href="@Url.Content("~/Areas/SO/Content/Common.css")" rel="stylesheet" type="text/css" />
}

@section jsFeature {
    <script src="@Url.Content("~/Areas/SO/Scripts/SOF0000/SOF0000.js")"></script>
}
@Html.ASOFTHidden("UrlUpdate", Url.Action("Update"))
@Html.ASOFTHidden("UrlSOF0005", Url.Action("Index", "SOF0005"))
@Html.ASOFTHidden("UrlSOF0006", Url.Action("Index", "SOF0006"))