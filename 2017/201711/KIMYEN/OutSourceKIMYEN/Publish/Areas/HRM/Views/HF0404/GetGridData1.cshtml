@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.HRM
@using ASOFT.ERP.HRM.Entities
@model HF0404GridViewModel
@{
    var gridsetting = new ASOFTGridSetting
                          {
                              NameGrid = "HF0404Grid1",
                              NameEventPost = "HF0404.sendDataFilter",
                              Scrollable = true,
                              ActionName = "GetGridData1",
                              ControllerName = "HF0404",
                              HtmlAttribute = new { @class = "asf-grid", style = "height:300px;" },
                              IsShowCheck = false,
                              IsAutoHeight = false,
                              ListGridColumn = new List<ASOFTGridColumnSetting>{         
           
                                    new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = HF0404.COL_EMPLOYEEID,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.EmployeeID),
                                                               Width = 150,
                                                               VisibleColumn = true
                                                           },
                                       new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = HF0404.COL_FULLNAME,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.FullName),
                                                               Width = 150,
                                                               VisibleColumn = true
                                                           },
                                                           new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = HF0404.COL_EMPLOAMONTHID,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.EmpLoaMonthID),
                                                               Width = 150,
                                                               VisibleColumn = false
                                                           }
                                                           
                              }
                          };
}

@(Html.ASOFTCreateGridNotPagging<HF0404>(gridsetting))