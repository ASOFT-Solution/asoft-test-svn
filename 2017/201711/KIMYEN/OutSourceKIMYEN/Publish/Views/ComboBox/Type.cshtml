
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Entities.Database

@model ASOFT.ERP.A00.Entities.Common.TypeComboboxModel
@{
    var comboBox = (Html.ASOFTCombobox(model => model.TypeID, htmlStyle: Model.Style)
        .Name(Model.Name)
        .DataValueField(MTT8888.COL_TYPE)
        .DataTextField(MTT8888.COL_DESCRIPTION)
        .HeaderTemplate(
            "<ul class=\"k-list asf-combo-item-header\">" +
                "<li class=\"k-item asf-combo-item-header-text\">" +
                    "<div class=\"asf-combo-item\">" +
                        "<div class=\"k-state-default asf-combo-col asf-combo-item-col-value\">Mã loại</div>" +
                        "<div class=\"k-state-default asf-combo-item-col asf-combo-item-col-text\">Tên loại</div>" +
                    "</div>" +
                "</li>" +
            "</ul>"
        )
        .Template(
            "<div class=\"asf-combo-item\">" +
                "<div class=\"k-state-default asf-combo-col asf-combo-item-col-value\">${Type}</div>" +
                "<div class=\"k-state-default asf-combo-item-col asf-combo-item-col-text\">${Description}</div>" +
            "</div>")
        .Enable(Model.Enabled));
        
    if (!string.IsNullOrEmpty(Model.SelectedIndexChanged))
    {
        comboBox.Events(model => model.Change(Model.SelectedIndexChanged));
    }     

    if(Model.List != null && Model.List.Count > 0)
    {
        if (Model.SelectedFirst)
        {
            comboBox.SelectedIndex(0);
        }

        //Hiển thị giá trị %
        if (Model.ShowAll)
        {
            Model.List.Insert(0, new MTT8888()
            {
                Type = "%",
                Description = ASOFTLanguage.FindWordA00("A00.All")
            });
        }
       
        comboBox.BindTo(Model.List);
    }
}


@comboBox