
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Entities.Database

@model ASOFT.ERP.A00.Entities.Common.TeacherComboboxModel
@{
    var comboBox = (Html.ASOFTCombobox(model => model.TeacherID, htmlStyle: Model.Style)
        .Name(Model.Name)
        .DataValueField(AT1103.COL_EMPLOYEEID)
        .DataTextField(AT1103.COL_FULLNAME)
        .Enable(Model.Enabled));

    if (!string.IsNullOrEmpty(Model.SelectedIndexChanged))
    {
        comboBox.Events(model => model.Change(Model.SelectedIndexChanged));
    }
    if (Model.List != null && Model.List.Count > 0)
    {
        if (Model.SelectedFirst)
        {
            comboBox.SelectedIndex(0);
        }

        //Hiển thị giá trị %
        if (Model.ShowAll)
        {
            Model.List.Insert(0, new AT1103()
            {
                EmployeeID = "%",
                FullName = ASOFTLanguage.FindWordA00("A00.All")
            });
        }
        comboBox.BindTo(Model.List);
    }
}


@comboBox