@using ASOFT.ERP.A00.Core;
@using ASOFT.ERP.ViewModel;
@model ASOFT.ERP.ViewModel.ASOFTSysFieldsViewModel
@using System.Web.UI.WebControls;
@using ASOFT.ERP.ViewModel.Helper;

<div class="container_12" style="height: 110px">
    <div class="container3">
        <div class="container2 line_right">
            <div class="container1 line_right">
                <div class="grid_4 alpha col1" style="width: 40%">
                    <div class="asf-filter-main">
                        @{
                            ViewDataDictionary ViewDT = new ViewDataDictionary();
                            ViewDT["Module"] = ViewBag.Module;
                            ViewDT["ScreenID"] = ViewBag.ScreenID;
                            ViewDT["ScreenType"] = "Filter";
                        }
                        @Html.Partial(string.Format(@"../Shared/Control/PeriodCheckList"), Model, ViewDT)
                    </div>
                </div>
                <div class="grid_4_1 col2" style="width: 28%">
                    <div class="asf-filter-main">
                        <div class="asf-filter-main">
                            <div class="asf-filter-label">@LocalizedHelper.GetLocalizedResourceString("LMF9000.SourceID", "LMF9000", "LM")</div>
                            <div class="asf-filter-input" style="width: 50%;">
                                @(Html.ASOFTBussinessComboBox().ASOFTSourceID(model => model.Data, codeMaster: "LMT00000015", htmlAttributes: new { id = "SourceID", hidden = true }))
                            </div>
                        </div>
                        <div class="asf-filter-main">
                            <div class="asf-filter-label">@LocalizedHelper.GetLocalizedResourceString("LMF9000.ObjectID", "LMF9000", "LM")</div>
                            <div class="asf-filter-input" style="width: 50%;">
                                @Html.ASOFTTextBox(m => m.Data, htmlStyle: new { width = Unit.Percentage(100) }, htmlAttribute: new { @id = "ObjectID" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid_4 omega float_right col3" style="width: 28%">
                    <div class="asf-filter-main">
                        <div class="asf-filter-main">
                            <div class="asf-filter-label">@LocalizedHelper.GetLocalizedResourceString("LMF9000.CurrencyID", "LMF9000", "LM")</div>
                            <div class="asf-filter-input" style="width: 50%;">
                                @(Html.ASOFTBussinessComboBox().ASOFTCurrencyID(model => model.Data, htmlAttributes: new { id = "CurrencyID", hidden = true }))
                            </div>
                        </div>
                        <div class="asf-filter-main">
                            <div class="asf-filter-label">@LocalizedHelper.GetLocalizedResourceString("LMF9000.VoucherNo", "LMF9000", "LM")</div>
                            <div class="asf-filter-input" style="width: 50%;">
                                @Html.ASOFTTextBox(m => m.Data, htmlStyle: new { width = Unit.Percentage(100) }, htmlAttribute: new { @id = "VoucherNo" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container_12 asf-form-button">
        <ul>
            <li>
                @(Html.ASOFTSearchButton()
                          .Name("BtnFilter")
                          .Events(e => e.Click("BtnFilter_Click"))
                          )
            </li>
            <li>
                @(Html.ASOFTSearchResetButton()
                          .Name("BtnClearFilter")
                        //.Events(e => e.Click("BtnClearFilter_Click"))
                          )
            </li>
        </ul>
    </div>
</div>
