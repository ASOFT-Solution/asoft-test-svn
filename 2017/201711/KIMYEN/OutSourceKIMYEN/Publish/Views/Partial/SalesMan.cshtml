
@using ASOFT.ERP.A00.Core;
@using ASOFT.ERP.ViewModel;
@model ASOFT.ERP.ViewModel.ASOFTSysFieldsViewModel
@{
      string ScreenID = ViewBag.ScreenID;
}

<tr class="EmployeePartial">
    @if (!ScreenID.Equals("SOF2001"))
    {
        @Html.ASOFTHidden("SalesManID", "").DisabledIf(1==1);
        @Html.ASOFTHidden("SalesManID_Content_DataType", "7").DisabledIf(1==1);
        @Html.ASOFTHidden("SalesManID_Type_Fields", "1").DisabledIf(1==1);
    }
    <td class="asf-td-caption">@Html.Label(Model.language, htmlAttributes: new { @for = "SalesManID"})
    </td>
    <td>@(Html.ASOFTTextBox(model => model.Data, htmlAttribute: new { Disabled = "Disabled", @id = "SalesManName"}))

        @(Html.ASOFTButton("...")
        .Name("btnChooseSalesMan")
        .HtmlAttributes(new { style = "width : 26px; height: 26px" })
        .Events(e => e.Click("btnChooseSalesMan_Click")))

        @(Html.ASOFTButton("")
        .Name("btnDeleteSalesMan")
        .HtmlAttributes(new { style = "width : 26px; height: 26px; background-image: url(/Content/Images/icon-delete-24x24.png); background-repeat: no-repeat" })
        .Events(e => e.Click("btnDeleteSalesMan_Click")))
    </td>
</tr>

<script>
    $("#SalesManName").css("width", "150px");
    $("#SalesManName").attr("name", "EmployeeName");
    $(document).ready(function () {
        if ($("#SalesManNameDB").val() !== undefined) {
            $("#SalesManName").val($("#SalesManNameDB").val());
            $("#SalesManNameDB").attr("Disabled", true);
        }

        if (typeof parent.GetCheckConfirm === "function") {
            if (parent.GetCheckConfirm() == 1) {
                $("#btnChooseSalesMan").data("kendoButton").enable(false);
                $("#btnDeleteSalesMan").data("kendoButton").enable(false);
            }
        }
    })
</script>