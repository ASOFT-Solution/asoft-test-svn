@using ASOFT.ERP.A00.Core.Control
@model DateTime?

@{
    ASOFTDateEditSettings dateEditSettings = new ASOFTDateEditSettings(null, null);
    dateEditSettings.Attributes.Add("type", "text");
}
@*Dành cho  Màn hình OOF2071*@
 @(Html.Kendo()
       .DatePickerFor(m => m)
        .HtmlAttributes(dateEditSettings.Attributes)
        .Format("{0:dd/MM/yyyy}")
        .Min(ASOFT.ERP.A00.Core.ASOFTEnvironment.CurBeginDate)
        .Max(ASOFT.ERP.A00.Core.ASOFTEnvironment.CurEndDate)
)
