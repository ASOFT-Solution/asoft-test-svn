                <td class="content-text" colspan="2">@Html.DisplayFor(model => model.CostTypeName)</td>
            </tr>
        </table>
    </div>
    <div class="asf-content-block last" style="width: 14.958%;">
         <table class="asf-table-view">
            <tr>
                <td class="content-label" colspan="2">@LocalizedHelper.GetLocalizedResourceString("LMF2002.OriginalAmount", "LMF2002", "LM")</td>
                <td class="dot"></td>
                <td class="content-text" colspan="2">@Html.ASOFTDisplayNumber(model => model.OriginalAmount)</td>
            </tr>
            <tr>
                <td class="content-label" colspan="2">@LocalizedHelper.GetLocalizedResourceString("LMF2002.ConvertedAmount", "LMF2002", "LM")</td>
                <td class="dot"></td>
                <td class="content-text" colspan="2">@Html.ASOFTDisplayNumber(model => model.ConvertedAmount)</td>
            </tr>
        </table>
     </div>
