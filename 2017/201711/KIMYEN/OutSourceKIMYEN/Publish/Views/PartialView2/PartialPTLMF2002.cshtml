        <table class="asf-table-view">
            <tr>
                <td class="content-label" colspan="2">@LocalizedHelper.GetLocalizedResourceString("LMF2002.AdvanceDate", "LMF2002", "LM")</td>
                <td class="dot"></td>
                <td class="content-text" colspan="2"><a onclick="LMF2011PT_Click()">@Html.DisplayFor(model => model.AdvanceDate)</a></td>
            </tr>
            <tr>
                <td class="content-label" colspan="2">@LocalizedHelper.GetLocalizedResourceString("LMF2002.Notes", "LMF2002", "LM")</td>
