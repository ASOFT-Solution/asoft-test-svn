                <td class="content-text" colspan="2">@Html.DisplayFor(model => model.Notes)</td>
            </tr>
        </table>
    </div>
    <div class="asf-content-block middle" style="width: 14.958%;">
         <table class="asf-table-view">
            <tr>
                <td class="content-label" colspan="2">@LocalizedHelper.GetLocalizedResourceString("LMF2002.AdvancePercent", "LMF2002", "LM")</td>
                <td class="dot"></td>
                <td class="content-text" colspan="2">@Html.ASOFTDisplayNumber(model => model.AdvancePercent)</td>
            </tr>
            <tr>
                <td class="content-label" colspan="2">@LocalizedHelper.GetLocalizedResourceString("LMF2002.CostTypeName", "LMF2002", "LM")</td>
