
@model string
@using System.Collections
@using ASOFT.ERP.A00.Core

@{
    
    string headerTemplate = String.Format(@"<ul class='k-list asf-combo-item-header'><li class='k-item asf-combo-item-header-text'><div class='asf-combo-item'><div style='width:200px' class='k-state-default asf-combo-item-col-value'>{0}</div><div style='width:400px' class='k-state-default asf-combo-item-col-text'>{1}</div></div></div></ul>", ASOFTLanguage.FindWordA00("A00.VoucherTypeID"), ASOFTLanguage.FindWordA00("A00.VoucherTypeName"));

    string itemTemplate = @"<div class='asf-combo-item'><div style='width:200px' class='k-state-default asf-combo-item-col-value'>${VoucherTypeID}</div><div style='width:340px' class='k-state-default asf-combo-item-col-text'>${VoucherTypeName}</div></div>";
}
<div id="autocomplete-box">
    <span id="kendo-native-widget">
        <span id="pseudo-input">
            <input type="text" value="" />

        </span>
        <span id="k-auto-complete">
            @(Html.Kendo().AutoComplete().HighlightFirst(true)
                      .HtmlAttributes(new Dictionary<string, Object> {
                          {"height","24px"},
                          {"listWidth", "600"},
                          {"style", "font-size: 14px; width:auto"}
                      })
                      .DataTextField("VoucherType")
                      .Filter("contains")
                      .HeaderTemplate(headerTemplate)
                      .Template(itemTemplate)
                      .BindTo((IEnumerable)ViewBag.VoucherType)
                      .Value(@Model)
                      .Name("CboVoucherTypeName")
                      .Events(e => e.DataBound("ASOFT.asoftComboBox.dataBound"))
                      
                      )
        </span>
    </span>
    <span id="custom-control-button">
        <button id="control-button" name="btnControl" class="k-sprite asf-icon asf-icon-24 asf-i-search-24"></button>
    </span>
</div>


