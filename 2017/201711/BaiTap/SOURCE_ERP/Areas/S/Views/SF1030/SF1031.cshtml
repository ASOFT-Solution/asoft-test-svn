@using ASOFT.ERP.ViewModel.S
@model SF1031ViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(m => m.SF1031Title, "SF1031").ToHtmlString();
    ViewBag.Width = 500;

    // Form Status
    bool isInsert = Model.FormStatus.Equals(ASOFTFormActionType.AddNew);
    bool isInherit = Model.FormStatus.Equals(ASOFTFormActionType.Inherit);
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SF1031" }))
{
 <div class="asf-form-container">
    <div class="form-content">

            <table class="asf-table-view">
                <tr>
                    <td class="asf-td-caption asf-td-align">@Html.ASOFTLabel(model => model.LanguageID)</td>
                    <td class="asf-td-field" colspan="2">@(Html.ASOFTBussinessComboBox().ASOFTLanguageID(model => model.LanguageID)
                                                            .Enable(Model.FormStatus==ASOFTFormActionType.AddNew))
                                                           @* //.Events(e=>e.Change("SF1031.combo_Changed")))*@
                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption asf-td-align">@Html.ASOFTLabel(model => model.Module)</td>
                    <td class="asf-td-field" colspan="2">@(Html.ASOFTBussinessComboBox().ASOFTModuleForLangID(model => model.Module)
                                                            .Enable(Model.FormStatus==ASOFTFormActionType.AddNew))
                                                           @* //.Events(e=>e.Change("SF1031.combo_Changed")))*@

                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption asf-td-align">@Html.ASOFTLabel(model => model.ID)</td>
                    <td class="asf-td-field" colspan="2">@(Html.ASOFTTextBox(model => model.ID, checkRegularExp:true)
                    .ReadOnlyIf(!(Model.FormStatus == ASOFTFormActionType.AddNew)))
                    </td>
                </tr>
                <tr>
                    <td class="asf-td-caption asf-td-align">@Html.ASOFTLabel(model => model.Name)</td>
                    <td class="asf-td-field" colspan="2">@(Html.ASOFTTextBox(model => model.Name))</td>
                </tr>
            </table>
       
    </div>
</div>
 <div class="asf-form-button">
            <table class="asf-table-view">
                <tr>
                    <td align="right">
                        <div class="asf-popup-button-container">
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                                        .Name("BtnClose")
                                        .Events(e => e.Click("SF1031.btnClose_Click"))
                                        )
                            </div>
                            <div >
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveCopy"))
                                        .Name("BtnSaveCopy")
                                        .Events(e => e.Click("SF1031.btnSaveCopy_Click"))
                                        .HideIf(!isInsert)
                                        )
                            </div>
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveNew"))
                                        .Name("btnSaveDRF1011")
                                        .Events(e => e.Click("SF1031.btnSaveNext_Click"))
                                        .HideIf(!isInsert)
                                        )
                            </div> 
                            <div>
                                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                        .Name("BtnSaveClose")
                                        .Events(e => e.Click("SF1031.btnSave_Click"))
                                        .HideIf(isInsert)
                                        )
                                        
                            </div>     
                        </div>
                    </td>
                </tr>
            </table>
        </div>
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/S/Content/Common.css")" rel="stylesheet" type="text/css" />
}

@section jsFeature {
    <script src="@Url.Content("~/Areas/S/Scripts/SF1031.js?v=" + ASOFTEnvironment.Version)"></script>
}

@Html.ASOFTHidden("UrlUpdate", Url.Action("Update"))
@Html.ASOFTHidden("UrlSF1032M", Url.Action("SF1032M"))
