@model SF0001ViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(m => m.Title, "SF0001").ToHtmlString();
    ViewBag.Width = 1000;
}

@Html.ASOFTHidden("UrlUpdate", Url.Action("Update"))
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SF0001" }))
{
 <div class="asf-form-container">
    <div class="form-content">
        <table class="asf-table-view">
            <tr>
                <td class="sf0001-td-caption">@Html.ASOFTLabel(model => model.ModuleID)</td>
                <td class="sf0001-td-space"></td>
                <td class="sf0001-td-text">
                    @(Html.ASOFTBussinessComboBox().ASOFTModuleID(model => model.ModuleID)
                            .SelectedIndex(0)
                            .Events(e=>e.DataBound("SF0001.moduleID_DataBound").Change("SF0001.moduleID_Changed")) 
                            //option: new ComboOption() { 
                            //    EventPostData = "SF0001.moduleID_SendData"
                            //})
                    )
                </td>
                <td class="sf0001-td-space"></td>
                <td class="sf0001-td-caption">@Html.ASOFTLabel(model => model.GroupID)</td>
                <td class="sf0001-td-text">
                    @(Html.ASOFTBussinessComboBox().ASOFTGroupID(model=>model.GroupID)
                            .SelectedIndex(0)
                            .Events(e=>e.DataBound("SF0001.groupID_DataBound").Change("SF0001.groupID_Changed")))
                </td>                
            </tr>
        </table>
    </div>
    <div class="form-content">
        <div class="sf0001-div-screen-type">
            <table class="asf-table-view">
                <tr>
                    <td class="sf0001-header">@Html.ASOFTLabel(model => model.ScreenHeader)</td>
                </tr>
                 <tr>
                    <td class="asf-td-caption">
                        <ul>
                            <li value="1" class="sf0001-li-selected">@Html.ASOFTLabel(model => model.ScreenTypeName1)</li>
                            <li value="2">@Html.ASOFTLabel(model => model.ScreenTypeName2)</li>
                            <li value="3">@Html.ASOFTLabel(model => model.ScreenTypeName3)</li>
                            <li value="5">@Html.ASOFTLabel(model => model.ScreenTypeName5)</li>
                            <li value="4">@Html.ASOFTLabel(model => model.ScreenTypeName4)</li>                   
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <div class="sf0001-div-grid">
            @Html.Partial("GridScreenID")
        </div>
    </div>
</div>
<div class="asf-form-button">
    <table class="asf-table-view">
        <tr>
            <td style="vertical-align: middle; color:red">@Html.ASOFTLabel(model=>model.Notification)</td>
            <td align="right">
                <div class="asf-popup-button-container">
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                              .Name("BtnClose")
                              .Events(e => e.Click("SF0001.btnClose_Click")))
                    </div>
                    <div>
                        @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                                .Name("BtnSaveClose")
                                .Events(e => e.Click("SF0001.btnSave_Click")))
                    </div>
                            
                </div>
            </td>
        </tr>
    </table>
</div>
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/S/Content/SF0001.css")" rel="stylesheet" type="text/css" />
}

@section jsFeature {
    <script src="@Url.Content("~/Areas/S/Scripts/SF0001.js?v=" + ASOFTEnvironment.Version)"></script>
}