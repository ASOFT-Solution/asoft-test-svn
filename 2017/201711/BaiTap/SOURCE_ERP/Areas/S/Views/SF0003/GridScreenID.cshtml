@using ASOFT.ERP.ViewModel.S 
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Entities
@using ASOFT.ERP.S.Entities
@model ASOFT.ERP.ViewModel.S.SF0003ViewModel
@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "SF0003Grid", 
        Scrollable = true, 
        ControllerName = "SF0003",
        ActionName = "LoadGridData",
        IsAutoHeight =  false,
        NameEventPost = "SF0003.gridSendData",
        IsShowCheck =false,      
        HtmlAttribute = new {     style = "height:350px;",  @class = "asf-grid"   },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = SF0003.COL_DATATYPEID,
                TitleColumn = Html.DisplayNameFor(model => model.DataTypeID).ToHtmlString(),
                Width = 50,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = SF0003.COL_DATATYPENAME,
                TitleColumn = Html.DisplayNameFor(model => model.DataTypeName).ToHtmlString(),
                Width = 100,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = SF0003.COL_PERMISSION,
                TitleColumn = Html.DisplayNameFor(model => model.Permission).ToHtmlString(),
                Width = 70,
                VisibleColumn = true,
                ClientTemplate = string.Format("<input id='{0}' type='checkbox' #= {0} == 1 ? 'checked' : '' # onchange='SF0003.checkBox_Changed(this)' style='width:100%' />",
                                                                                SF0003.COL_PERMISSION),
                HtmlAttrCoulmns = new { @class = "asf-cols-align-center", id = "notAllowedEnter" }
            }
        }
        
    };
}
@(Html.ASOFTCreateGridNotPagging<SF0003>(gridsetting))
            