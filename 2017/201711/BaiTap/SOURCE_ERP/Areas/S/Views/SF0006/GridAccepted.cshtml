@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.S
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Entities
@using ASOFT.ERP.S.Entities
@using ASOFT.ERP.A00.Entities.StoredProcedure

@model ASOFT.ERP.ViewModel.S.SF0006ViewModel

@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "SF0006GridAccepted", 
        Scrollable = true, 
        ControllerName = "SF0006",
        ActionName = "GridDataAccepted",
        IsAutoHeight =  false,
        NameEventPost = "SF0006.sendDataPost",
        IsShowCheck = false,
        HtmlAttribute = new
        {
            style = "height:300px;", 
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = SP0006.COL_REPORTID,
                TitleColumn = Html.ASOFTRaw(model => model.ReportID),
                Width = 80,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = SP0006.COL_REPORTNAME,
                TitleColumn = Html.ASOFTRaw(model => model.ReportName),
                Width = 150,
                VisibleColumn = true,
            },
        }
    };
}
@(Html.ASOFTCreateGridNotPagging<SP0006>(gridsetting))
            