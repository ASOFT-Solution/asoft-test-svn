@using ASOFT.ERP.A00.Core;


@model ASOFT.ERP.ViewModel.POS.POSF0007ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "POSF0007").ToHtmlString();
    ViewBag.Width = 700;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "POSF0007"
}))
{
    <span class="asf-disabled-visibility">
        @Html.ASOFTTextBox(model => model.PageSizeID)
    </span>
   
    <table class="asf-table-view">
        <tr>
            <td class="container_label">
                @Html.ASOFTLabel(model => model.DivisionID)
            </td>
            <td colspan="3">
                @(Html.ASOFTBussinessComboBox()
                        .ASOFTDivisionID(model
                            => model.DivisionID,
                            htmlAttributes: new Dictionary<string, object> 
                            {
                                {"data-bind","value:DivisionID"}
                            })
                            )
            </td>
        </tr>
        <tr>
            <td>
                @Html.ASOFTLabel(model => model.MonthYear)
            </td>
            <td colspan="3">
                @(Html.ASOFTBussinessComboBox().ASOFTPeriod(model => model.MonthYear,
                                htmlAttributes: new Dictionary<string, object> {
                                    {"data-bind","value:MonthYear"}}
                                )
                                .AutoBind(true))


            </td>
        </tr>

        <tr>
            <td>@Html.ASOFTLabel(model => model.PageSizeNumber)</td>
            <td>
                @(Html.ASOFTBussinessComboBox().ASOFTPageSize2(model => model.PageSizeNumber, htmlStyle: new
                       {
                           width = Unit.Percentage(100)
                       }
                       ))
            </td>
        </tr>

      @*  <tr>
            <td>@Html.ASOFTLabel(model => model.WarehouseID)</td>
            <td>
                @(Html.ASOFTBussinessComboBox().ASOFTWareHouseID(model => model.WarehouseID, htmlStyle: new
                       {
                           width = Unit.Percentage(100)
                       }
                       )
                       .DataTextField("WareHouseName")
                       )
            </td>
        </tr>*@

        <tr>
            <td>&nbsp;</td>
            <td>
               
            </td>
        </tr>
        @if (ASOFTEnvironment.BusinessArea == ASOFTConstants.BUSSINESSAREA_CAFE)
        {
            <tr>
                <td></td>
                <td>
                    @(Html.ASOFTCheckbox(model => model.IsNegativeStock))
                </td>
            </tr>
        }

        <tr>
                <td>
                    
                </td>
                <td>
                    @(Html.ASOFTCheckbox(model => model.IsConnectERP))
                </td>
        </tr>


    </table>
    
    <div class="clearfix"></div>
    <div class="asf-form-button">
        <table class="asf-table-view">
            <tr>
                <td>@*align="right"*@
                    <div class="asf-popup-button-container">


                        <div>
                            @(Html
                            .ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                            .Name("btnClose")
                            .Events(e => e.Click("btnClose_Click"))

                            )
                        </div>
                        <div>
                            @(Html
                            .ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveSetting"))
                            .Name("btnSave")
                            .Events(e => e.Click("btnSave_Click"))

                            )

                        </div>

                    </div>
                </td>
            </tr>
        </table>
    </div>
    
    
    @Html.ASOFTHidden(model => model.LastModifyDateValue)
}

@section jsFeature {
    <script 
        src="@Url.Content("~/Areas/POS/Scripts/ASOFTVIEW.js")" 
        type="text/javascript"></script>
    <script 
        src="@Url.Content("~/Areas/POS/Scripts/POSF0007.js")" 
        type="text/javascript"></script>
}