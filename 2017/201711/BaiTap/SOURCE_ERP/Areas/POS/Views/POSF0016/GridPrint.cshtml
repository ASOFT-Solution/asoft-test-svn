@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.POS
@model POSR0001ViewModel
@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "POSF00161Print",
        Scrollable = false,
        IsShowCheck = false,
        HtmlAttribute = new
        {
            @class = "asf-grid",
            width = "100%"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
             new ASOFTGridColumnSetting
            {
                ClientTemplate = "#= renderNumber(data) #",
                TitleColumn = ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 5,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = POST00161.COL_INVENTORYNAME,
                TitleColumn = Html.ASOFTRaw(model => model.InventoryName),
                Width = 220,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = POST00161.COL_UNITNAME,
                TitleColumn = Html.ASOFTRaw(model => model.UnitName),
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                Width = 40,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = POST00161.COL_ACTUALQUANTITY,
                TitleColumn = Html.ASOFTRaw(model => model.ActualQuantity),
                Width = 40,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true
            },
             new ASOFTGridColumnSetting
            {
                IDColumn =  POST00161.COL_INVENTORYAMOUNT,
                TitleColumn = Html.ASOFTRaw(model => model.InventoryAmount),
                Width = 140,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:right"})
            }
        }
    };
}

@*(Html.ASOFTrintGrid<POST00161>(gridsetting).BindTo(Model.DetailList))*@

<div id="POSF00161Print" class="k-widget k-grid asf-grid k-secondary grid_12 alpha omega">
    <table role="grid" style="width:100%;">
        <colgroup>
            <col style="width: 2%">
            <col style="width: 48%">
            <col style="width: 10%">
            <col style="width: 10%">
            <col style="width: 30%">
        </colgroup>
        <thead class="k-grid-header">
            <tr>
                <th scope="col" class="k-header"><span class="k-link">@Html.ASOFTRaw(model => model.Order)</span></th>
                <th scope="col" class="k-header"><span class="k-link">@Html.ASOFTRaw(model => model.InventoryName)</span></th>
                <th scope="col" class="k-header"><span class="k-link">@Html.ASOFTRaw(model => model.UnitName)</span></th>
                <th scope="col" class="k-header"><span class="k-link">@Html.ASOFTRaw(model => model.ActualQuantity)</span></th>
                <th scope="col" class="k-header"><span class="k-link">@Html.ASOFTRaw(model => model.InventoryAmount)</span></th>
            </tr>
        </thead>
        <tbody>
            @{
                List<POST00161> result = Model.DetailList;
                int count = result.Count;
                for (int i = 0; i < count; i++)
                {
                    POST00161 item = result[i];
                    <tr>
                        <td class="asf-cols-align-center">@(i+1)</td>
                        <td>@item.InventoryName</td>
                        <td>@item.UnitName</td>
                        <td class="asf-cols-align-right">@string.Format(ASOFTConstants.FORMAT_NUMBER_DECIMAL_STYLE_01, item.ActualQuantity)</td>
                        <td class="asf-cols-align-right">@string.Format(ASOFTConstants.FORMAT_NUMBER_DECIMAL_STYLE_01, item.InventoryAmount)</td>
                    </tr>
                }
             }

           
        </tbody>
    </table>
</div>
