@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@model POSF00163ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "POSF00163").ToHtmlString();
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "POSF00163"
}))
{
    @Html.ASOFTHidden(m => m.DivisionID)
    @Html.ASOFTHidden(m => m.ShopID)
    @Html.ASOFTHidden(m => m.VoucherDate)
    @Html.ASOFTHidden(m => m.CA)
    @Html.ASOFTHidden(m => m.APK)

    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "GridInventoryCA",
        Scrollable = true,
        ControllerName = "POSF0016",
        ActionName = "GridInventoryCA",
        NameEventPost = "sendDataSearch",
        IsShowCheck = false,
        IsAutoHeight = false,
        HtmlAttribute = new
        {
            style = "height:300px;",
            @class = "asf-grid"
        },
        //Defferred = true,
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {                
            new ASOFTGridColumnSetting
            {
                IDColumn = "",
                ClientTemplate = "<input type='radio' name='radio-check' onclick='radio_Click(this)' />",
                Width = 20,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"})
            },          
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryID",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryID),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryName",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryName),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true
            },         
            new ASOFTGridColumnSetting
            {
                IDColumn = "UnitPrice",
                TitleColumn = Html.ASOFTRaw(model => model.UnitPrice),
                Width = 110,
                FormatType = EnumFormatType.UnitCostDecimals,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true
            },         
            new ASOFTGridColumnSetting
            {
                IDColumn = "CA",
                TitleColumn = Html.ASOFTRaw(model => model.CA),
                Width = 110,
                FormatType = EnumFormatType.ConvertedDecimals,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true
            },          
            
            new ASOFTGridColumnSetting
            {
                IDColumn = "ActualQuantity",
                Width = 70,
                VisibleColumn = false
            },  
            
            new ASOFTGridColumnSetting
            {
                IDColumn = "PromoteChangeUnitPrice",
                Width = 70,
                VisibleColumn = false
            }, 
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "DivisionID",
                Width = 70,
                VisibleColumn = false
            }, 
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "ShopID",
                Width = 70,
                VisibleColumn = false
            }, 
        }
    };
    
    @(Html.ASOFTCreateGrid<ASOFT.ERP.POS.Entities.POSP00163>(gridsetting))
}
    
        
<div class="container_12 asf-form-button">
        <ul>
            <li>@(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnChoose"))
                    .Name("btnChoose").Events(e => e.Click("btnChoose_Click")))</li>
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnCancel"))
                    .Name("btnCancel").Events(e => e.Click("btnCancle_Click")))

            </li>
        </ul>
</div> 

@section jsFeature {
     <script src="@Url.Content("~/Areas/POS/Scripts/POSF00163.js")" type="text/javascript"></script>
}


