                Width = 110,
                FormatType = EnumFormatType.ConvertedDecimals,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true,
                EditColumn = true,
                EditorTemplateName = "POSInventoryMS"
            },                  
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "SuggestInventoryName",
                TitleColumn = Html.ASOFTRaw(model => model.SuggestInventoryName),
                Width = 110,
                FormatType = EnumFormatType.ConvertedDecimals,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true,
                EditColumn = false
            },    
            
            new ASOFTGridColumnSetting
            {
                IDColumn = "SuggestUnitPrice",
                TitleColumn = Html.ASOFTRaw(model => model.SuggestUnitPrice),
                Width = 110,
                FormatType = EnumFormatType.ConvertedDecimals,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true,
                EditColumn = false
            },      
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "SuggestCA",
                TitleColumn = Html.ASOFTRaw(model => model.SuggestCA),
                Width = 110,
                FormatType = EnumFormatType.ConvertedDecimals,
                HtmlAttrCoulmns = (new {style = "text-align:right"}),
                VisibleColumn = true,
                EditColumn = false
            },           
               
            
            new ASOFTGridColumnSetting
            {
                IDColumn = "FromDate",
                Width = 70,
                VisibleColumn = false
            },  
            
            new ASOFTGridColumnSetting
            {
                IDColumn = "ToDate",
                Width = 70,
                VisibleColumn = false
            }, 
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "PriceTableOrColumnType",
                Width = 70,
                VisibleColumn = false
            }, 
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "PriceTableOrColumnName",
                Width = 70,
                VisibleColumn = false
            }, 
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "DivisionID",
                Width = 70,
                VisibleColumn = false
            }, 
            
             new ASOFTGridColumnSetting
            {
                IDColumn = "ShopID",
                Width = 70,
                VisibleColumn = false
            }, 
        }
    };
    
    @(Html.ASOFTCreateGridEdit<ASOFT.ERP.POS.Entities.POSP00164>(gridsetting)
    .Pageable(page =>
            {
                page.ButtonCount(5);
                page.PageSizes(new[] { 10, 25, 50, 100 });
                page.Info(false);
                page.Messages(mes => mes.ItemsPerPage(ASOFTLanguage.FindWordA00("A00.RecordPerPage")));
            }).DataSource(ds => ds.Ajax().Model(model => model.Id("")).PageSize(ASOFTEnvironment.PageSize))
    )
}
    
        
<div class="container_12 asf-form-button">
        <ul>
            <li>@(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                    .Name("btnChoose").Events(e => e.Click("btnSave_Click")))</li>
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnCancel"))
