@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@model POSF00164ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Width = 900;
    ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "POSF00164").ToHtmlString();
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "POSF00164"
}))
{
    @Html.ASOFTHidden(m => m.DivisionID)
    @Html.ASOFTHidden(m => m.ShopID)
    @Html.ASOFTHidden(m => m.VoucherDate)
    @Html.ASOFTHidden(m => m.APK)

    <div class="container_12" style="height: 60px">
     <div class="container3">
           <div class="container2 line_right">
                <div class="container1 line_right">
                     <div class="grid_4 alpha col1" style="width: 30%">
                          <table class="asf-table-view">                                   
                               <tbody>
                                   <tr>
                                        <td class="container_label">@Html.ASOFTRaw(model => model.InventoryID)</td>
                                        <td class="container_control">
                                           @Html.ASOFTTextBox(m => m.InventoryID, htmlStyle: new { width = Unit.Percentage(100) }).DisabledIf(true)
                                        </td>
                                    </tr>                             
                               </tbody>
                          </table>
                     </div>
                    <div class="grid_4_1 col2"  style="width: 35%">
                         <table class="asf-table-view">                                   
                               <tbody>
                                   <tr>
                                        <td class="container_label">@Html.ASOFTRaw(model => model.InventoryName)</td>
                                        <td class="container_control">
