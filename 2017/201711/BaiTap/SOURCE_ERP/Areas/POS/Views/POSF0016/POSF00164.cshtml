                                    <tr>
                                        <td class="container_label">@Html.ASOFTRaw(model => model.CA)</td>
                                        <td class="container_control">
                                            @Html.ASOFTTextBox(m => m.CA, htmlStyle: new { width = Unit.Percentage(100) }).DisabledIf(true)
                                        </td>
                                    </tr>
                             </tbody>
                        </table>
                    </div>
                 </div>
           </div>  
    </div>
    </div>

    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "GridInventory",
        Scrollable = true,
        ControllerName = "POSF0016",
        ActionName = "GridInventoryPOSF00164",
        NameEventPost = "sendDataSearch",
        IsShowCheck = false,
        IsAutoHeight = false,
        HtmlAttribute = new
        {
            style = "height:300px;",
            @class = "asf-grid"
        },
        //Defferred = true,
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {                
            new ASOFTGridColumnSetting
            {
                IDColumn = "",
                ClientTemplate = "<input type='radio' name='radio-check' onclick='radio_Click(this)' />",
                Width = 20,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"})
            },          
            new ASOFTGridColumnSetting
            {
                IDColumn = "PromoteInventoryID",
                TitleColumn = Html.ASOFTRaw(model => model.PromoteInventoryID),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true,
                EditColumn = false
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "PromoteInventoryName",
                TitleColumn = Html.ASOFTRaw(model => model.PromoteInventoryName),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:left"}),
                VisibleColumn = true,
                EditColumn = false
            },         
            new ASOFTGridColumnSetting
            {
                IDColumn = "PromoteUnitPrice",
                TitleColumn = Html.ASOFTRaw(model => model.PromoteUnitPrice),
                Width = 110,
