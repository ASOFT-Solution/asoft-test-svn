@model ASOFT.ERP.ViewModel.POS.POSF0027ViewModel
@{
    Layout = "~/Views/Shared/_ContentMaster.cshtml";
    ViewBag.Title = @Html.ASOFTPageTitle(m => m.Title, "POSF0027");

}

@section Header {
    @Html.ASOFTHeader(new ASOFT.ERP.A00.Entities.Common.HeaderModel
    {
        Title = Html.ASOFTPageTitle(model => model.Title, "POSF0027").ToHtmlString(), 
        Breakcrumb = true
    })
}

@section FilterCol1 {
    @Html.Partial(@"../Shared/PeriodFilter",
    new ASOFT.ERP.ViewModel.A00.PeriodFilterViewModel())

    <tr>
        <td colspan="1">@Html.ASOFTLabel(model => model.DivisionIDFilter)</td>
@*        <td class="container_period_space"></td>*@
        <td colspan="4">@(Html.ASOFTBussinessComboBox()
                        .ASOFTDivisionIDList(model
                            => model.DivisionIDFilter,
                            htmlAttributes: new Dictionary<string, object> 
                            {
                                {"data-bind","value:DivisionIDFilter"}
                            }
                                                ))</td>
    </tr>
}

@section FilterCol2 {
     <tr>
        <td>@Html.ASOFTLabel(model => model.ShopIDFilter)</td>
        <td>
            @Html.ASOFTTextBox(model => model.ShopIDFilter, htmlStyle: new
                   {
                       width = Unit.Percentage(100)
                   })
        </td>
    </tr>
     <tr>
        <td>@Html.ASOFTLabel(model => model.WarehouseIDFilter)</td>
        <td>
            @Html.ASOFTTextBox(model => model.WarehouseIDFilter, htmlStyle: new
                   {
                       width = Unit.Percentage(100)
                   })
        </td>
    </tr>
    <tr>
        <td>@Html.ASOFTLabel(model => model.VoucherNoFilter)</td>
        <td>
            @Html.ASOFTTextBox(model => model.VoucherNoFilter, htmlStyle: new
                   {
                       width = Unit.Percentage(100)
                   })
        </td>
    </tr>
}

@section FilterCol3 {
      <tr>
        <td>@Html.ASOFTLabel(model => model.EmployeeIDFilter)</td>
        <td>
            @Html.ASOFTTextBox(model => model.EmployeeIDFilter, htmlStyle: new
                   {
                       width = Unit.Percentage(100)
                   })
        </td>
    </tr>

    <tr>
        <td>@Html.ASOFTLabel(model => model.EmployeeNameFilter)</td>
        <td>
            @Html.ASOFTTextBox(model => model.EmployeeNameFilter, htmlStyle: new
           {
               width = Unit.Percentage(100)
           })
        </td>
    </tr>

    <tr>
        <td>@Html.ASOFTLabel(model => model.Status)</td>
        <td>
           @(Html.ASOFTBussinessComboBox()
                              .ASOFTStatusNo(model => model.Status)
                              .DataTextField(ASOFT.ERP.A00.Entities.Database.POST0099.COL_DESCRIPTION))
        </td>
    </tr>
}

@section GridToolBar {
                @if (Model.Toolbar1 != null)
                {
                    Model.Toolbar1.EventAdd = "btnAdd_Click";
                    Model.Toolbar1.EventDelete = "btnDelete_Click";
                }
                @Html.Partial("~/Views/Shared/EditorTemplates/Toolbar.cshtml", Model.Toolbar1 ?? new ASOFTToolBarViewModel())
}

@section Grid {
    @Html.Partial("GridVoucher")

}

@section FilterButtons {
    <li>
        @(Html.ASOFTSearchButton()
            .Name("POSF0027BtnFilter")
            .Events(e => e.Click("btnFilter_Click")))


    </li>
    <li>
        @(Html.ASOFTSearchResetButton()
            .Name("POSF0027BtnClearFilter")
            .Events(e => e.Click("btnReset_Click")))
    </li>
}

@section jsFeature {   
     <script src="@Url.Content("~/Areas/POS/Scripts/POSFSearchPeriod.js")" 
        type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0027.js")" 
        type="text/javascript"></script>


}