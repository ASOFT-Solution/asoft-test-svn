@using ASOFT.ERP.A00.Core

@model ASOFT.ERP.ViewModel.POS.POSF0013ViewModel

@{
    Layout = "~/Views/Shared/_ContentMaster.cshtml";
    ViewBag.Title = ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "POSF0013").ToHtmlString();
}

@section Header {
            @Html.ASOFTHeader(new HeaderModel {Title = Html.ASOFTPageTitle(model => model.Title, "POSF0013").ToHtmlString(),   Breakcrumb = true })
}
@section FilterCol1 {
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.DivisionIDFilter)</td>
                        <td>
                            @Html.ASOFTBussinessComboBox().ASOFTDivisionIDList(model => model.DivisionIDFilter)
                        </td>
                    </tr>
}
@section FilterCol2 {
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.PaymentIDFilter)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.PaymentIDFilter, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
}
@section FilterCol3 {
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.PaymentNameFilter)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.PaymentNameFilter, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
}
@section FilterButtons {
                <li>
                    @(Html.ASOFTSearchButton()
                          .Name("posf0013BtnFilter")
                          .Events(e => e.Click("posf0013BtnFilter_Click")))

                </li>
                <li>
                    @(Html.ASOFTSearchResetButton()
                          .Name("posf0013BtnClearFilter")
                          .Events(e => e.Click("posf0013BtnClearFilter_Click")))
                </li>
 }
@section Grid {
        @Html.Partial("GridPayment")
}


@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0013.js")" type="text/javascript"></script>
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/POS/Content/POSF0013.css")" rel="stylesheet" type="text/css" />
}