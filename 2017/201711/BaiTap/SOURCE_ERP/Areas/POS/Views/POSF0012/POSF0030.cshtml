@model ASOFT.ERP.ViewModel.POS.POSF0030ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = @Html.ASOFTPageTitle(@Html.PopupEditTitle(m => m.Title), "POSF0030").ToHtmlString();
    ViewBag.Width = 800;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "POSF0030"
}))
{
    <span class="asf-disabled-visibility"></span>
    
    <div class="asf-form-container container_12 pagging_bottom ">
        <div class="grid_6 alpha float_left">
            <table class="asf-table-view">
                <tr>
                    <td>@Html.ASOFTLabel(model => model.ShopIDFilter)</td>
                    <td>
                        @(Html.ASOFTBussinessComboBox().ASOFTShopIDList(model => model.ShopIDFilter)
            .DataTextField(ASOFT.ERP.A00.Entities.Database.POST0010.COL_SHOPID)
            .DataValueField(ASOFT.ERP.A00.Entities.Database.POST0010.COL_SHOPID))

                    </td>
                </tr>
            </table>
        </div>
        <div class="grid_0"></div>
        <div class="grid_6 omega float_right line_left_with_grid">
            <table class="asf-table-view">
                <tr>
                    <td>@Html.ASOFTLabel(model => model.InventoryFilter)

                    </td>
                    <td>
                        @Html.ASOFTTextBox(model => model.InventoryFilter, htmlStyle: new
                           {
                               width = Unit.Percentage(100)
                           })
                    </td>
                </tr>

            </table>
        </div>
    </div>
    <div class="asf-li-container">
        <ul class="right-align">
            <li>
                @(Html.ASOFTSearchButton()
                      .Name("btnInventoryIDFilter")
                      .Events(e => e.Click("btnInventoryIDFilter_Click")))
            </li>
        </ul>
    </div>
    <div class="asf-form-container container_12">
        <fieldset>
            <legend>&nbsp;&nbsp;@Html.ASOFTRaw(m => m.CurrentShopLabel)<span id="CurrentShop"></span>&nbsp;&nbsp;</legend>
            @Html.Partial("GridSelectInventories")
        </fieldset>

    </div>
    <div class="container_12 asf-form-button">
        <ul>
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                      .Name("btnClose")
                      .Events(e => e.Click("btnClose_Click")))

            </li>
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSave"))
                      .Name("btnSave")
                      .Events(e => e.Click("btnSave_Click")))

            </li>
            


        </ul>
    </div>
}


@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/ASOFTVIEW.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0030.js")" type="text/javascript"></script>
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/POS/Content/POSF0030.css")" rel="stylesheet" type="text/css" />
}