@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.ViewModel.POS
@using ASOFT.ERP.POS.Entities

@model POSF0030ViewModel


@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "GridSelectInventories", 
        Scrollable = true,
        IsShowCheck = false, 
        ControllerName = "POSF0012",
        ActionName = "GetSelectInventories",
        IsAutoHeight = false,
        NameEventPost = "filterData",
        HtmlAttribute = new
        {
            style = "height:340px;", 
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "Selected",
                TitleColumn = @"<input type='checkbox' id='chkAll' onclick='checkAllCustom(this)' class='chkbx'/>",
                ClientTemplate = @"<input type='checkbox' #= (Selected == true) ? checked='checked': '' # class='chkbx' data-InventoryID='#=InventoryID#' />",
                HtmlAttrCoulmns = (new {@class = "asf-cols-align-center"}),
                Width = 15,
                VisibleColumn = true
            },       
            new ASOFTGridColumnSetting
            {
                IDColumn = "RowNum",
                 TitleColumn = ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 10,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:center"})
            },     
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryID",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryID),
                Width = 70,
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "Barcode",
                TitleColumn = Html.ASOFTRaw(model => model.Barcode),
                Width = 70,
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "InventoryName",
                TitleColumn = Html.ASOFTRaw(model => model.InventoryName),
                Width = 110,
                HtmlAttrCoulmns = (new {style = "text-align:center"}),
                VisibleColumn = true
            },            
        }
    };
}

@(Html.ASOFTCreateGrid<POSP00123>(gridsetting))

