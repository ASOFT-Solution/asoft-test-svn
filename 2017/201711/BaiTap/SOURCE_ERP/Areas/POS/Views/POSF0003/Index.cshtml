@model ASOFT.ERP.ViewModel.POS.POSF0003ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = Html.ASOFTPageTitle(model => model.Title, "POSF0003").ToHtmlString();
    ViewBag.Width = 650;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "POSF0003"
}))
{
    <span class="hide">
        @Html.ASOFTLabel(model => model.ExamplePoint)
        @Html.ASOFTLabel(model => model.ExampleMoney)
        @Html.ASOFTLabel(model => model.Point1)
        @Html.ASOFTLabel(model => model.Point2)
        @Html.ASOFTLabel(model => model.Money1)
        @Html.ASOFTLabel(model => model.Money2)
        @Html.ASOFTLabel(model => model.CurrencyID)
        @Html.ASOFTLabel(model => model.Currency)
        @Html.ASOFTTextBox(model => model.FormStatus)
        @Html.ASOFTTextBox(model => model.LastModifiedDateTicks)
    </span>
    <div class="container_12">
        <table class="asf-table-view">
            <tr>
                <td class="col1">@Html.ASOFTLabel(model => model.ChangePoint)</td>
                <td
                    class="col2">@(Html.ASOFTSpinEdit(model => model.Money1,
                                                    htmlStyle: new
                                                    {
                                                        width = Unit.Percentage(100)
                                                    })
                                .Max(9999999999)
                                .Min(0))


                </td>
                <td class="col3 center-text"><span id="CurrencyName1">VND</span> =</td>
                <td class="col4">
                    @(Html.ASOFTSpinEdit(model => model.Point1,
                                        htmlStyle: new
                                        {
                                            width = Unit.Percentage(100)
                                        })
                                .Max(9999999999)
                                .Min(0))

                </td>
                <td class="center-text col5"><span id="PointID1">Điểm</span></td>

            </tr>

            <tr>
                <td>&nbsp;</td>
                <td colspan="4"><span id="ExampleMoneyPlaceHolder"></span></td>
            </tr>

            <tr>
                <td>@Html.ASOFTLabel(model => model.ChangeMoney)</td>
                <td>
                    @(Html.ASOFTSpinEdit(model => model.Point2,
                                        htmlStyle: new
                                        {
                                            width = Unit.Percentage(100)
                                        })
                                .Max(9999999999)
                                .Min(0))

                </td>
                <td class="center-text"><span id="PointID2">Điểm = </span></td>
                <td>
                    @(Html.ASOFTSpinEdit(model => model.Money2,
                                        htmlStyle: new
                                        {
                                            width = Unit.Percentage(100)
                                        })
                                .Max(9999999999)
                                .Min(0))

                </td>
                <td class="center-text"><span id="CurrencyName2">VND</span></td>

            </tr>

            <tr>
                <td>&nbsp;</td>
                <td colspan="4"><span id="ExamplePointPlaceHolder"></span></td>
            </tr>

            <tr>
                <td>@Html.ASOFTLabel(model => model.CurrentName)</td>
                <td colspan="3">
                    @(Html.ASOFTBussinessComboBox().ASOFTCurrencyID(model => model.CurrencyID)
                    .Events(e => e.Change("cbCurrencyID_Change")))
                </td>
                <td>&nbsp;</td>
            </tr>
            @*<tr>
                <td>&nbsp;</td>
                <td colspan="3">
                    @Html.ASOFTCheckbox(model => model.UpdateCard)
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td colspan="3">
                    @Html.ASOFTCheckbox(model => model.DownCard)
                </td>
            </tr>*@

        </table>
    </div>
    <div class="container_12 asf-form-button">
        <ul>
            <li>@(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveSetting"))
                      .Name("POSF0025Save")
                      .Events(m => m.Click("btnSave_Click")))</li>
            <li>
                @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                      .Name("POSF0025Close")
                      .Events(e => e.Click("btnClose_Click")))

            </li>
        </ul>
    </div>
}

@section styleFeature{
    <link href="@Url.Content("~/Areas/POS/Content/POSF0003.css")" rel="stylesheet" type="text/css" />
}

@section jsFeature {
    <script 
        src="@Url.Content("~/Areas/POS/Scripts/ASOFTVIEW.js")" 
        type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0003.js")" type="text/javascript"></script>
}