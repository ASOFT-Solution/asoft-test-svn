@using ASOFT.ERP.A00.Core;


@model ASOFT.ERP.ViewModel.POS.POSF00261ViewModel

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = "Thêm thẻ hội viên";//@Html.PopupEditTitle(m => m.Title); //ASOFTLanguage.FindWordA00("POSF0026.PopupAddTitle"); //
    ViewBag.Width = 700;
}

<div class="asf-form-container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "POSF026" }))
    {
        <div class="container_12">
            <div class="grid_6">
                <table class="asf-table-view">
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.MemberCardID)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.MemberCardID, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.MemberID)</td>
                        <td>
                            @Html.ASOFTCombobox(model => model.MemberID, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.MemberName)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.MemberName, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.MemberCardType)</td>
                        <td>
                            @Html.ASOFTCombobox(model => model.MemberCardType, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid_6 line_left">
                <table class="asf-table-view">
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.ReleaseDate)</td>
                        <td>
                            @Html.ASOFTDateEdit(model => model.ReleaseDate, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.ExpiryDate)</td>
                        <td>
                            @Html.ASOFTDateEdit(model => model.ExpiryDate, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.ASOFTLabel(model => model.LockReason)</td>
                        <td>
                            @Html.ASOFTTextBox(model => model.LockReason, htmlStyle: new { width = Unit.Percentage(100) })
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            @Html.ASOFTCheckbox(model => model.Active)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            @Html.ASOFTCheckbox(model => model.Locked)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
      
        <div class="container_12 asf-form-button">
            <ul>
                <li>@(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnSaveSetting"))
                      .Name("POSF0026Save")
                      .Events(m => m.Click("POSF0026Save")))</li>
                <li>
                    @(Html.ASOFTButton(ASOFTLanguage.FindWordA00("A00.btnClose"))
                      .Name("BtnClose")
                      .Events(e => e.Click("popupClose")))

                </li>
            </ul>
        </div>  
    }
</div>


@section jsFeature {
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF002601.js")" type="text/javascript"></script>
}
