    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0040/task-buttons.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0040/content-master.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0040/master-data.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0040/POSF0038.choose-dishes.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/POS/Scripts/POSF0040/POSF0036.choose-tables.js")" type="text/javascript"></script>
