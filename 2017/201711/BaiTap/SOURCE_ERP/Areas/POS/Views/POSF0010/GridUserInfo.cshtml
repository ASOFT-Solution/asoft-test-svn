@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.POS
@model POSF00101ViewModel

@{  
    var gridsetting = new ASOFTGridSetting
    {
        NameGrid = "POSF00101Grid", 
        Scrollable = true, 
        ControllerName = "POSF0010",
        ActionName = "GetGridUserInfo",
        NameEventPost = "SendDataMaster",
        IsShowCheck = false,
        HtmlAttribute = new
        {
            style = "height:300px;", 
            @class = "asf-grid"
        },
        ListGridColumn = new List<ASOFTGridColumnSetting>
        {
            new ASOFTGridColumnSetting
            {
                IDColumn = "RowNum",
                ClientTemplate = "#= renderNumber(data) #",
                TitleColumn = ASOFTLanguage.FindWordA00("A00.Number"),
                Width = 30,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {@class = "asf-cols-align-center"}),
            },
             new ASOFTGridColumnSetting
            {
                IDColumn = "Selected",
                TitleColumn = Html.ASOFTRaw(model => model.Selected),
                ClientTemplate = @"<input type='checkbox' #= (Selected == 1) ? checked='checked': '' # class='chkbx' />",
                HtmlAttrCoulmns = (new {@class = "asf-cols-align-center"}),
                Width = 30,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "EmployeeID",
                TitleColumn = Html.ASOFTRaw(model => model.EmployeeID),
                Width = 130,
                VisibleColumn = true
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "EmployeeName",
                TitleColumn = Html.ASOFTRaw(model => model.EmployeeName),
                Width = 140,
                VisibleColumn = true
            },
        }
    };
}

@(Html.ASOFTCreateGridEdit<ASOFT.ERP.A00.Entities.Extension.POST0026>(gridsetting))


