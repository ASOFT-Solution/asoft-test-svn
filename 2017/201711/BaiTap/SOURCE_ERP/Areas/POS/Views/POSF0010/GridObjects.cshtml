            new ASOFTGridColumnSetting
            {
                IDColumn = "ObjectID",
                TitleColumn = Html.ASOFTRaw(model => model.ObjectID),
                Width = 140,
                VisibleColumn = true,
            },
            new ASOFTGridColumnSetting
            {
                IDColumn = "ObjectName",
                TitleColumn = Html.ASOFTRaw(model => model.ObjectName),
                Width = 140,
                VisibleColumn = true,
                HtmlAttrCoulmns = (new {style = "text-align:right"})
            }
        }
    };
}

@(Html.ASOFTCreateGrid<POSP0043>(gridsetting))
