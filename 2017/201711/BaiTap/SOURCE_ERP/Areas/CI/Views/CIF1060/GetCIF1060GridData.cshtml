
@using ASOFT.ERP.A00.Core
@using ASOFT.ERP.A00.Core.Control
@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.CI
@using ASOFT.ERP.CI.Entities
@model CIF1060ViewModel
@{
    var gridsetting = new ASOFTGridSetting
                          {
                              NameGrid = "CIF1060Grid",
                              NameEventPost = "CIF1060.sendDataFilter",
                              Scrollable = true,
                              ActionName = "GetCIF1060GridData",
                              ControllerName = "CIF1060",
                              Encode = true,
                              HtmlAttribute = new {style = "height:590px;", @class = "asf-grid"},
                              IsShowCheck = true,
                              ListGridColumn = new List<ASOFTGridColumnSetting>{
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = "RowNum",
                                                               TitleColumn = ASOFTLanguage.FindWordA00("A00.Order"),
                                                               Width = 50,
                                                               VisibleColumn = true,
                                                           },
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = CIP1060.COL_CITYID,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.CityID),
                                                               Width = 100,
                                                               VisibleColumn = true,
                                                               ClientTemplate = string.Format("<a href='{0}'>#:{1}#</a>", 
                                                                        Url.Content(string.Format("~/CI/CIF1060/CIF1062/?cityID=#:{0}#", CIP1060.COL_CITYID)),
                                                                        CIP1060.COL_CITYID),
                                                           },    
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = CIP1060.COL_CITYNAME,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.CityName),
                                                               Width = 100,
                                                               VisibleColumn = true,                                                               
                                                           },  
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = CIP1060.COL_ISCOMMON,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.IsCommon),
                                                               Width = 100,
                                                               VisibleColumn = true,
                                                               ClientTemplate = "<input type='checkbox' #= IsCommon ? 'checked' : '' # onclick='return false;' disabled=disabled />",
                                                               HtmlAttrCoulmns = new { @class = "asf-cols-align-center" }
                                                           },
                                     
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = CIP1060.COL_DISABLED,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.Disabled),
                                                               Width = 100,
                                                               VisibleColumn = true,
                                                               ClientTemplate = "<input type='checkbox' #= Disabled ? 'checked' : '' # onclick='return false;' disabled=disabled />",
                                                               HtmlAttrCoulmns = new { @class = "asf-cols-align-center" }
                                                           }
                                
                              }
                          };
}

@(Html.ASOFTCreateGrid<ASOFT.ERP.CI.Entities.CIP1060>(gridsetting,false))