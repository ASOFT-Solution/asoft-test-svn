@using ASOFT.ERP.A00.Entities.Database
@using ASOFT.ERP.ViewModel.CI
@using ASOFT.ERP.CI.Entities
@model CIF1070ViewModel
@{
    var gridsetting = new ASOFTGridSetting
                          {
                              NameGrid = "CIF1070Grid",
                              NameEventPost = "CIF1070.sendDataFilter",
                              Scrollable = true,
                              ActionName = "GetCIF1070GridData",
                              ControllerName = "CIF1070",
