                                                                        CIP1070.COL_DISTRICTID),
                                                           }, 
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = CIP1070.COL_DISTRICTNAME,
                                                               TitleColumn = Html.ASOFTRaw(model=>model.DistrictName),
                                                               Width = 100,
                                                               VisibleColumn = true,                                                             
                                                           },     
                                        new ASOFTGridColumnSetting
                                                           {
                                                               IDColumn = CIP1070.COL_CITYNAME,
